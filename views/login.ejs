<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff Portal - Ella Rises</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="min-h-screen bg-cream flex items-center justify-center p-4">
    <div class="w-full max-w-md">
        <!-- Back to Home Link -->
        <div class="mb-4">
            <a class="inline-flex items-center gap-2 text-muted-foreground hover:text-foreground" href="/">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-left h-4 w-4">
                    <path d="m12 19-7-7 7-7"></path>
                    <path d="M19 12H5"></path>
                </svg>
                <span>Back to Home</span>
            </a>
        </div>

        <!-- Card -->
        <div class="rounded-lg border text-card-foreground shadow-sm bg-background">
            <!-- Title Section -->
            <div class="flex flex-col space-y-1.5 p-6 text-center">
                <h3 class="tracking-tight text-3xl font-serif font-bold text-primary">Staff Portal</h3>
                <p class="text-sm text-muted-foreground">Access the Ella Rises CRM to manage programs and participants.</p>
            </div>

            <!-- Forms Container -->
            <div class="p-6 pt-0">
                <!-- Tabs -->
                <div class="flex bg-muted rounded-full p-1 mb-6">
                    <button 
                        type="button"
                        id="loginTab"
                        class="flex-1 py-2 px-4 rounded-full text-sm font-medium transition-colors <%= typeof showSignUp === 'undefined' || !showSignUp ? 'bg-sage text-sage-foreground' : 'text-muted-foreground hover:text-foreground' %>"
                        onclick="showLogin()"
                    >
                        Login
                    </button>
                    <button 
                        type="button"
                        id="signupTab"
                        class="flex-1 py-2 px-4 rounded-full text-sm font-medium transition-colors <%= typeof showSignUp !== 'undefined' && showSignUp ? 'bg-sage text-sage-foreground' : 'text-muted-foreground hover:text-foreground' %>"
                        onclick="showSignUp()"
                    >
                        Sign Up
                    </button>
                </div>

                <!-- Error Message -->
                <% if (typeof error !== 'undefined' && error) { %>
                <div class="mb-6 p-4 bg-destructive/10 border border-destructive/20 rounded-md">
                    <p class="text-sm text-destructive"><%= error %></p>
                </div>
                <% } %>

                <!-- Success Message -->
                <% if (typeof success !== 'undefined' && success) { %>
                <div class="mb-6 p-4 bg-secondary/20 border border-secondary rounded-md">
                    <p class="text-sm text-card-foreground"><%= success %></p>
                </div>
                <% } %>

                <!-- Signup Message (when redirected from login) -->
                <% if (typeof signupMessage !== 'undefined' && signupMessage) { %>
                <div class="mb-6 p-4 bg-blue-100 border-2 border-blue-400 rounded-md shadow-sm">
                    <p class="text-sm font-medium text-blue-900"><%= signupMessage %></p>
                </div>
                <% } %>

                <!-- Login Form -->
                <form id="loginForm" action="/login" method="POST" class="space-y-4 <%= typeof showSignUp !== 'undefined' && showSignUp ? 'hidden' : '' %>">
                    <div class="space-y-2">
                        <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70" for="email">Email</label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            required
                            placeholder="your.email@ellarises.org"
                            class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-base ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium file:text-foreground placeholder:text-muted-foreground/50 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 md:text-sm"
                        />
                    </div>

                    <div class="space-y-2">
                        <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70" for="password">Password</label>
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            required
                            class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-base ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium file:text-foreground placeholder:text-muted-foreground/50 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 md:text-sm"
                        />
                    </div>

                    <button 
                        type="submit"
                        class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg]:size-4 [&_svg]:shrink-0 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2 w-full"
                    >
                        Login
                    </button>

                    <!-- Demo Accounts Section -->
                    <div class="mt-6 p-4 bg-muted rounded-lg">
                        <p class="text-sm font-medium mb-2">Demo Accounts:</p>
                        <div class="text-xs space-y-1 text-muted-foreground">
                            <p>Manager: manager@ellarises.org / password123</p>
                            <p>User: user@ellarises.org / password123</p>
                        </div>
                    </div>
                </form>

                <!-- Sign Up Form -->
                <form id="signupForm" action="/signup" method="POST" class="space-y-4 <%= typeof showSignUp === 'undefined' || !showSignUp ? 'hidden' : '' %>">
                    <!-- First Name and Last Name side by side -->
                    <div class="grid grid-cols-2 gap-4">
                        <div class="space-y-2">
                            <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70" for="first_name">First Name</label>
                            <input 
                                type="text" 
                                id="first_name" 
                                name="first_name" 
                                required
                                placeholder="Jane"
                                class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-base ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium file:text-foreground placeholder:text-muted-foreground/50 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 md:text-sm"
                            />
                        </div>

                        <div class="space-y-2">
                            <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70" for="last_name">Last Name</label>
                            <input 
                                type="text" 
                                id="last_name" 
                                name="last_name" 
                                required
                                placeholder="Doe"
                                class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-base ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium file:text-foreground placeholder:text-muted-foreground/50 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 md:text-sm"
                            />
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70" for="signup_email">Email</label>
                        <input 
                            type="email" 
                            id="signup_email" 
                            name="email" 
                            required
                            placeholder="your.email@ellarises.org"
                            value="<%= typeof signupEmail !== 'undefined' && signupEmail ? signupEmail : '' %>"
                            class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-base ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium file:text-foreground placeholder:text-muted-foreground/50 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 md:text-sm"
                        />
                    </div>

                    <div class="space-y-2">
                        <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70" for="signup_password">Password</label>
                        <input 
                            type="password" 
                            id="signup_password" 
                            name="password" 
                            required
                            value="<%= typeof signupPassword !== 'undefined' && signupPassword ? signupPassword : '' %>"
                            class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-base ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium file:text-foreground placeholder:text-muted-foreground/50 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 md:text-sm"
                        />
                    </div>

                    <div class="space-y-2">
                        <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70" for="confirm_password">Confirm Password</label>
                        <input 
                            type="password" 
                            id="confirm_password" 
                            name="confirm_password" 
                            required
                            class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-base ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium file:text-foreground placeholder:text-muted-foreground/50 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 md:text-sm"
                        />
                        <div id="passwordError" class="hidden text-sm text-destructive mt-1"></div>
                    </div>

                    <button 
                        type="submit"
                        class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg]:size-4 [&_svg]:shrink-0 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2 w-full"
                    >
                        Create Account
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Check URL parameters and server-provided values on page load
        window.addEventListener('DOMContentLoaded', function() {
            const urlParams = new URLSearchParams(window.location.search);
            const signupParam = urlParams.get('signup');
            
            // If signup=true in URL, show signup form
            // Email/password are pre-filled from server session (more secure than localStorage)
            if (signupParam === 'true') {
                showSignUp();
            }
        });

        function showLogin() {
            // Hide signup form, show login form
            document.getElementById('signupForm').classList.add('hidden');
            document.getElementById('loginForm').classList.remove('hidden');
            
            // Update tab styles
            document.getElementById('loginTab').classList.add('bg-sage', 'text-sage-foreground');
            document.getElementById('loginTab').classList.remove('text-muted-foreground', 'hover:text-foreground');
            document.getElementById('signupTab').classList.remove('bg-sage', 'text-sage-foreground');
            document.getElementById('signupTab').classList.add('text-muted-foreground', 'hover:text-foreground');
        }

        function showSignUp() {
            // Hide login form, show signup form
            document.getElementById('loginForm').classList.add('hidden');
            document.getElementById('signupForm').classList.remove('hidden');
            
            // Update tab styles
            document.getElementById('signupTab').classList.add('bg-sage', 'text-sage-foreground');
            document.getElementById('signupTab').classList.remove('text-muted-foreground', 'hover:text-foreground');
            document.getElementById('loginTab').classList.remove('bg-sage', 'text-sage-foreground');
            document.getElementById('loginTab').classList.add('text-muted-foreground', 'hover:text-foreground');
        }

        // Client-side password validation - shows inline error without wiping form
        const signupForm = document.getElementById('signupForm');
        if (signupForm) {
            signupForm.addEventListener('submit', function(e) {
                const password = document.getElementById('signup_password').value;
                const confirmPassword = document.getElementById('confirm_password').value;
                const passwordError = document.getElementById('passwordError');
                const confirmPasswordInput = document.getElementById('confirm_password');
                
                // Clear previous errors
                passwordError.classList.add('hidden');
                confirmPasswordInput.classList.remove('border-destructive');
                
                if (password !== confirmPassword) {
                    e.preventDefault();
                    
                    // Show inline error message
                    passwordError.textContent = 'Passwords do not match. Please try again.';
                    passwordError.classList.remove('hidden');
                    
                    // Highlight the confirm password field
                    confirmPasswordInput.classList.add('border-destructive');
                    confirmPasswordInput.focus();
                    
                    return false;
                }
            });
            
            // Clear error when user starts typing in confirm password field
            const confirmPasswordInput = document.getElementById('confirm_password');
            if (confirmPasswordInput) {
                confirmPasswordInput.addEventListener('input', function() {
                    const password = document.getElementById('signup_password').value;
                    const confirmPassword = this.value;
                    const passwordError = document.getElementById('passwordError');
                    
                    if (password === confirmPassword) {
                        passwordError.classList.add('hidden');
                        this.classList.remove('border-destructive');
                    }
                });
            }
        }
    </script>
</body>
</html>
