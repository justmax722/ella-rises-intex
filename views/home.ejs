<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Ella Rises CRM</title>
    <link rel="icon" type="image/png" href="/images/favicon.png">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-background min-h-screen flex">
    <!-- Sidebar Navigation -->
    <%- include('partials/sidebar', { user: user, currentPage: 'home' }) %>

    <!-- Main Content Area -->
    <main class="flex-1 p-6 md:p-8 flex flex-col">
        <div class="max-w-7xl mx-auto w-full flex flex-col flex-1">
            <!-- Page Header -->
            <div class="mb-8">
                <h1 class="text-3xl md:text-4xl font-serif text-foreground mb-2">Home</h1>
            </div>

            <% if (user.role !== 'manager') { %>
            <!-- Participant View - 3 Column Layout -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 flex-1">
            
            <!-- Left Column: My Upcoming Events -->
            <div class="bg-card rounded-lg shadow-sm overflow-hidden">
                <div class="p-4 border-b border-border">
                    <div class="flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <h3 class="text-sm font-semibold text-card-foreground">My Upcoming Events</h3>
                    </div>
                </div>
                <div class="p-4">
                    <% if (typeof myUpcomingEvents !== 'undefined' && myUpcomingEvents.length > 0) { %>
                    <div class="space-y-3">
                        <% myUpcomingEvents.forEach(event => { %>
                        <div class="p-3 bg-muted/30 rounded-lg border border-border">
                            <div class="flex items-center gap-2 mb-1">
                                <h4 class="text-sm font-medium text-card-foreground"><%= event.eventname %></h4>
                                <span class="inline-flex items-center px-1.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Registered</span>
                            </div>
                            <p class="text-xs text-card-foreground/70 mb-2">
                                <%= new Date(event.eventdatetimestart).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %>
                                at <%= new Date(event.eventdatetimestart).toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' }) %>
                            </p>
                            <a href="/events/<%= event.sessionid %>" class="text-xs text-primary hover:underline">View Details â†’</a>
                        </div>
                        <% }); %>
                    </div>
                    <% } else { %>
                    <div class="text-center py-6">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 mx-auto text-muted-foreground mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <p class="text-xs text-muted-foreground mb-3">No upcoming events</p>
                        <a href="/events" class="inline-flex items-center justify-center rounded-md text-xs font-medium bg-primary text-primary-foreground hover:bg-primary/90 px-3 py-1.5">
                            Browse Events
                        </a>
                    </div>
                    <% } %>
                </div>
            </div>

            <!-- Middle Column: Surveys to Complete -->
            <div class="bg-card rounded-lg shadow-sm overflow-hidden">
                <div class="p-4 border-b border-border">
                    <div class="flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                        </svg>
                        <h3 class="text-sm font-semibold text-card-foreground">Surveys to Complete</h3>
                    </div>
                </div>
                <div class="p-4">
                    <% if (typeof pendingSurveys !== 'undefined' && pendingSurveys.length > 0) { %>
                    <p class="text-xs text-card-foreground/70 mb-3">
                        <%= pendingSurveys.length %> survey<%= pendingSurveys.length !== 1 ? 's' : '' %> pending
                    </p>
                    <div class="space-y-3">
                        <% pendingSurveys.forEach(survey => { %>
                        <div class="p-3 bg-muted/30 rounded-lg border border-border">
                            <h4 class="text-sm font-medium text-card-foreground mb-1"><%= survey.eventname %></h4>
                            <p class="text-xs text-card-foreground/70 mb-2">
                                <%= new Date(survey.eventdatetimestart).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %>
                            </p>
                            <a href="/surveys/take/<%= survey.sessionid %>" class="inline-flex items-center gap-1 text-xs bg-primary text-primary-foreground rounded px-2 py-1 hover:bg-primary/90">
                                Take Survey
                            </a>
                        </div>
                        <% }); %>
                    </div>
                    <% } else { %>
                    <div class="text-center py-6">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 mx-auto text-muted-foreground mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <p class="text-xs text-muted-foreground mb-3">All caught up!</p>
                        <a href="/events" class="inline-flex items-center justify-center rounded-md text-xs font-medium bg-sage text-sage-foreground hover:bg-sage/90 px-3 py-1.5">
                            Sign Up for Events
                        </a>
                    </div>
                    <% } %>
                </div>
            </div>

            <!-- Right Column: Milestones (stacked) -->
            <div class="flex flex-col gap-4">
                <!-- Milestones Count (Top) -->
                <div class="bg-card rounded-lg shadow-sm overflow-hidden">
                    <div class="p-4">
                        <div class="flex items-center gap-2 mb-3">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                            </svg>
                            <h3 class="text-sm font-semibold text-card-foreground">Milestones Achieved</h3>
                        </div>
                        <div class="text-center">
                            <p class="text-4xl font-bold text-primary mb-1"><%= typeof milestoneCount !== 'undefined' ? milestoneCount : 0 %></p>
                            <a href="/milestones" class="inline-flex items-center gap-1 text-xs text-primary hover:underline">
                                View All â†’
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Most Recent Milestone (Bottom) -->
                <div class="bg-card rounded-lg shadow-sm overflow-hidden flex-1">
                    <div class="p-4">
                        <div class="flex items-center gap-2 mb-3">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                            <h3 class="text-sm font-semibold text-card-foreground">Most Recent</h3>
                        </div>
                        <% if (typeof mostRecentMilestone !== 'undefined' && mostRecentMilestone) { %>
                        <div class="text-center">
                            <div class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-accent/20 mb-2">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <h4 class="text-sm font-semibold text-card-foreground mb-1"><%= mostRecentMilestone.milestonetitle %></h4>
                            <p class="text-xs text-card-foreground/70">ðŸŽ‰ Congrats!</p>
                        </div>
                        <% } else { %>
                        <div class="text-center py-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mx-auto text-muted-foreground mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                            </svg>
                            <p class="text-xs text-muted-foreground">None yet!</p>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
            </div><!-- End 3-column grid -->
            <% } %>

            <% if (user.role === 'manager') { %>
            <!-- Key Metrics Cards -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
                <!-- Active Participants -->
                <div class="bg-card rounded-lg p-6 shadow-sm">
                    <div class="flex items-center justify-between mb-2">
                        <h3 class="text-sm font-medium text-card-foreground/70">Active Participants</h3>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
                        </svg>
                    </div>
                    <p class="text-3xl font-semibold text-secondary"><%= typeof activeParticipantsCount !== 'undefined' ? activeParticipantsCount.toLocaleString('en-US') : '0' %></p>
                    <p class="text-xs text-card-foreground/70 mt-1">total enrolled</p>
                </div>

                <!-- Upcoming Events -->
                <div class="bg-card rounded-lg p-6 shadow-sm">
                    <div class="flex items-center justify-between mb-2">
                        <h3 class="text-sm font-medium text-card-foreground/70">Upcoming Events</h3>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <p class="text-3xl font-semibold text-accent"><%= typeof upcomingEventsCount !== 'undefined' ? upcomingEventsCount.toLocaleString('en-US') : '0' %></p>
                    <p class="text-xs text-card-foreground/70 mt-1">scheduled events</p>
                </div>

                <!-- Milestones Achieved -->
                <div class="bg-card rounded-lg p-6 shadow-sm">
                    <div class="flex items-center justify-between mb-2">
                        <h3 class="text-sm font-medium text-card-foreground/70">Milestones Achieved</h3>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                    </div>
                    <p class="text-3xl font-semibold text-secondary"><%= typeof milestonesAchievedCount !== 'undefined' ? milestonesAchievedCount.toLocaleString('en-US') : '0' %></p>
                    <p class="text-xs text-card-foreground/70 mt-1">total achieved</p>
                </div>

                <!-- Donations This Month -->
                <div class="bg-card rounded-lg p-6 shadow-sm">
                    <div class="flex items-center justify-between mb-2">
                        <h3 class="text-sm font-medium text-card-foreground/70">Donations This Month</h3>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                        </svg>
                    </div>
                    <p class="text-3xl font-semibold text-accent">$<%= typeof donationsThisMonth !== 'undefined' ? donationsThisMonth.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) : '0.00' %></p>
                    <p class="text-xs text-card-foreground/70 mt-1">total donations</p>
                </div>

                <!-- Net Promoter Score -->
                <div class="bg-card rounded-lg p-6 shadow-sm">
                    <div class="flex items-center justify-between mb-2">
                        <h3 class="text-sm font-medium text-card-foreground/70">Net Promoter Score</h3>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                        </svg>
                    </div>
                    <p class="text-3xl font-semibold text-secondary"><%= typeof netPromoterScore !== 'undefined' ? netPromoterScore.toLocaleString('en-US') : '0' %></p>
                    <p class="text-xs text-card-foreground/70 mt-1">
                        <% if (typeof netPromoterScore !== 'undefined' && netPromoterScore >= 70) { %>Excellent
                        <% } else if (typeof netPromoterScore !== 'undefined' && netPromoterScore >= 50) { %>Great
                        <% } else if (typeof netPromoterScore !== 'undefined' && netPromoterScore >= 0) { %>Good
                        <% } else { %>Needs Improvement<% } %>
                    </p>
                </div>

                <!-- Survey Response Rate -->
                <div class="bg-card rounded-lg p-6 shadow-sm">
                    <div class="flex items-center justify-between mb-2">
                        <h3 class="text-sm font-medium text-card-foreground/70">Survey Response Rate</h3>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <p class="text-3xl font-semibold text-accent"><%= typeof surveyResponseRate !== 'undefined' ? surveyResponseRate.toFixed(1) : '0.0' %>%</p>
                    <p class="text-xs text-card-foreground/70 mt-1">attended events with surveys</p>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-wrap gap-6 justify-center mb-8">
                <a href="/events/create" class="flex items-center justify-center rounded-md text-sm font-medium px-10 py-3 gap-2 transition-colors" style="background-color: hsl(var(--primary)) !important; color: white !important; width: 240px !important; min-width: 240px !important; flex-shrink: 0 !important;" onmouseover="this.style.backgroundColor='hsl(126, 21%, 62%)'" onmouseout="this.style.backgroundColor='hsl(var(--primary))'">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: white !important;">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Create Event
                </a>
                <a href="/signup?role=user" class="flex items-center justify-center rounded-md text-sm font-medium px-10 py-3 gap-2 transition-colors" style="background-color: hsl(var(--primary)) !important; color: white !important; width: 240px !important; min-width: 240px !important; flex-shrink: 0 !important;" onmouseover="this.style.backgroundColor='hsl(126, 21%, 62%)'" onmouseout="this.style.backgroundColor='hsl(var(--primary))'">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: white !important;">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Add User
                </a>
                <button onclick="openAddMilestoneModal()" class="flex items-center justify-center rounded-md text-sm font-medium px-10 py-3 gap-2 transition-colors" style="background-color: hsl(var(--primary)) !important; color: white !important; width: 240px !important; min-width: 240px !important; flex-shrink: 0 !important;" onmouseover="this.style.backgroundColor='hsl(126, 21%, 62%)'" onmouseout="this.style.backgroundColor='hsl(var(--primary))'">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: white !important;">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Add Milestone
                </button>
                <a href="/dashboard" class="flex items-center justify-center rounded-md text-sm font-medium px-10 py-3 gap-2 transition-colors" style="background-color: hsl(var(--primary)) !important; color: white !important; width: 240px !important; min-width: 240px !important; flex-shrink: 0 !important;" onmouseover="this.style.backgroundColor='hsl(126, 21%, 62%)'" onmouseout="this.style.backgroundColor='hsl(var(--primary))'">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: white !important;">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                    View Dashboard
                </a>
            </div>

            <!-- Charts Section -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Low Registrations -->
                <div class="bg-card rounded-lg p-6 shadow-sm">
                    <h3 class="text-lg font-semibold text-card-foreground mb-4">Low Registrations</h3>
                    <% if (typeof lowRegistrationEvents !== 'undefined' && lowRegistrationEvents.length > 0) { %>
                    <div class="space-y-2">
                        <% lowRegistrationEvents.forEach(event => { %>
                        <div class="p-4 bg-muted/30 rounded-lg border border-border hover:bg-muted/50 transition-colors">
                            <div class="flex items-center justify-between gap-4">
                                <div class="flex-1 min-w-0">
                                    <h4 class="text-sm font-semibold text-card-foreground mb-1 truncate"><%= event.eventname %></h4>
                                    <p class="text-xs text-card-foreground/70">
                                        <span class="font-semibold text-destructive"><%= event.registeredCount %></span> / <span class="font-semibold"><%= event.capacity %></span> (<%= event.registrationPercentage %>%)
                                    </p>
                                </div>
                                <a href="/events/<%= event.sessionid %>" class="inline-flex items-center justify-center rounded-md text-xs font-medium bg-primary text-primary-foreground hover:bg-primary/90 px-4 py-2 whitespace-nowrap flex-shrink-0">
                                    View Details
                                </a>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                    <% } else { %>
                    <div class="text-center py-8">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 mx-auto text-muted-foreground mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <p class="text-sm text-card-foreground/70">All upcoming events have good registration rates.</p>
                    </div>
                    <% } %>
                </div>

                <!-- Milestone Achievements -->
                <div class="bg-card rounded-lg p-6 shadow-sm">
                    <h3 class="text-lg font-semibold text-card-foreground mb-4">Milestone Achievements</h3>
                    <div class="h-48 flex items-end justify-center gap-4">
                        <div class="flex flex-col items-center">
                            <div class="w-16 bg-destructive h-4 rounded-t mb-1"></div>
                            <span class="text-xs text-card-foreground/70">University</span>
                        </div>
                        <div class="flex flex-col items-center">
                            <div class="w-16 bg-secondary h-16 rounded-t mb-1"></div>
                            <span class="text-xs text-card-foreground/70">STEM</span>
                        </div>
                        <div class="flex flex-col items-center">
                            <div class="w-16 bg-destructive h-4 rounded-t mb-1"></div>
                            <span class="text-xs text-card-foreground/70">STEM</span>
                        </div>
                    </div>
                </div>
            </div>

            <% } %>

            <!-- Add Milestone Modal (Managers Only) -->
            <% if (user.role === 'manager') { %>
            <div id="addMilestoneModal" class="fixed inset-0 z-50 hidden flex items-center justify-center">
                <div class="absolute inset-0 bg-black/50" onclick="closeAddMilestoneModal()"></div>
                <div class="relative bg-card rounded-lg shadow-xl w-full max-w-md mx-4">
                    <div class="p-6 border-b border-border flex items-center justify-between">
                        <h3 class="text-lg font-semibold text-card-foreground">Add Milestone</h3>
                        <button onclick="closeAddMilestoneModal()" class="text-card-foreground/50 hover:text-card-foreground">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </button>
                    </div>
                    <form method="POST" action="/milestones/add" class="p-6">
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-card-foreground mb-2">Participant</label>
                            <select name="userId" required class="w-full px-3 py-2 border border-border rounded-lg bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary">
                                <option value="">Select participant...</option>
                                <% if (typeof participants !== 'undefined') { %>
                                    <% participants.forEach(p => { %>
                                    <option value="<%= p.userid %>"><%= p.userfirstname %> <%= p.userlastname %> (<%= p.useremail %>)</option>
                                    <% }); %>
                                <% } %>
                            </select>
                        </div>
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-card-foreground mb-2">Milestone Type</label>
                            <select name="milestoneId" required class="w-full px-3 py-2 border border-border rounded-lg bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary">
                                <option value="">Select milestone...</option>
                                <% if (typeof milestoneTypes !== 'undefined') { %>
                                    <% milestoneTypes.forEach(mt => { %>
                                    <option value="<%= mt.milestoneid %>"><%= mt.milestonetitle %></option>
                                    <% }); %>
                                <% } %>
                            </select>
                        </div>
                        <div class="mb-6">
                            <label class="block text-sm font-medium text-card-foreground mb-2">Date Achieved</label>
                            <input type="date" name="milestoneDate" required 
                                   max="<%= new Date().toISOString().split('T')[0] %>"
                                   class="w-full px-3 py-2 border border-border rounded-lg bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary">
                        </div>
                        <div class="flex gap-3">
                            <button type="button" onclick="closeAddMilestoneModal()" class="flex-1 px-4 py-2 border border-border text-card-foreground rounded-lg hover:bg-muted/50 transition-colors">
                                Cancel
                            </button>
                            <button type="submit" class="flex-1 px-4 py-2 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-colors font-medium">
                                Add Milestone
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <% } %>
        </div>
    </main>

    <script>
        function openAddMilestoneModal() {
            document.getElementById('addMilestoneModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeAddMilestoneModal() {
            const addForm = document.querySelector('#addMilestoneModal form');
            if (addForm) {
                addForm.reset();
            }
            document.getElementById('addMilestoneModal').classList.add('hidden');
            document.body.style.overflow = '';
        }
    </script>
</body>
</html>

