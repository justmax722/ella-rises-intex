<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Ella Rises CRM</title>
    <link rel="icon" type="image/png" href="/images/favicon.png">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-background min-h-screen flex">
    <!-- Sidebar Navigation -->
    <%- include('partials/sidebar', { user: user, currentPage: 'home' }) %>

    <!-- Main Content Area -->
    <main class="flex-1 p-6 md:p-8">
        <div class="max-w-7xl mx-auto">
            <!-- Page Header -->
            <div class="mb-8 flex items-center justify-between">
                <div>
                    <h1 class="text-3xl md:text-4xl font-serif text-foreground mb-2">Home</h1>
                    <% if (user.role !== 'manager') { %>
                    <p class="text-base text-card-foreground/70">Welcome back<% if (user.firstName) { %>, <%= user.firstName %><% } %>!</p>
                    <% } else { %>
                    <p class="text-base text-card-foreground/70">Admin dashboard overview</p>
                    <% } %>
                </div>
            </div>
            <% if (user.role !== 'manager') { %>
            <!-- Participant View - 3 Column Layout -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 flex-1 min-h-0">
            
            <!-- Left Column: My Upcoming Events -->
            <div class="card-elevated p-6 flex flex-col min-h-0 animate-fade-in" style="animation-delay: 0.1s;">
                <div class="flex items-start gap-3 mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 icon-pink flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <div>
                        <h2 class="font-semibold text-lg text-foreground">My Upcoming Events</h2>
                        <p class="text-sm text-muted-foreground">Events you're registered for</p>
                    </div>
                </div>
                <div class="flex-1 overflow-y-auto">
                    <% if (typeof myUpcomingEvents !== 'undefined' && myUpcomingEvents.length > 0) { %>
                    <div class="space-y-0">
                        <% myUpcomingEvents.forEach(event => { %>
                        <div class="flex items-center justify-between gap-4 py-4 border-t border-border">
                            <div class="min-w-0">
                                <h3 class="font-semibold text-foreground truncate"><%= event.eventname %></h3>
                                <p class="text-sm text-muted-foreground"><%= new Date(event.eventdatetimestart).toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric', year: 'numeric' }) %><% if (event.eventlocation) { %> · <%= event.eventlocation %><% } %></p>
                            </div>
                            <a href="/events/<%= event.sessionid %>" class="btn-dark">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                </svg>
                                View Details
                            </a>
                        </div>
                        <% }); %>
                    </div>
                    <% } else { %>
                    <div class="text-center py-8 flex-1 flex flex-col items-center justify-center">
                        <p class="text-sm text-muted-foreground mb-4">No upcoming events scheduled</p>
                        <a href="/events" class="btn-dark">Browse Events</a>
                    </div>
                    <% } %>
                </div>
            </div>

            <!-- Middle Column: Surveys to Complete -->
            <div class="card-elevated p-6 flex flex-col min-h-0 animate-fade-in" style="animation-delay: 0.2s;">
                <div class="flex items-start gap-3 mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 icon-pink flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <rect width="8" height="4" x="8" y="2" rx="1" ry="1"></rect>
                        <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"></path>
                        <path d="M12 11h4"></path>
                        <path d="M12 16h4"></path>
                        <path d="M8 11h.01"></path>
                        <path d="M8 16h.01"></path>
                    </svg>
                    <div>
                        <h2 class="font-semibold text-lg text-foreground">Surveys to Complete</h2>
                        <p class="text-sm text-muted-foreground">Share your feedback</p>
                    </div>
                </div>
                <% if (typeof pendingSurveys !== 'undefined' && pendingSurveys.length > 0) { %>
                <div class="py-2 border-t border-border mb-4">
                    <p class="text-muted-foreground text-sm"><span class="font-semibold text-foreground"><%= pendingSurveys.length %></span> survey<%= pendingSurveys.length !== 1 ? 's' : '' %> awaiting your feedback</p>
                </div>
                <% } %>
                <div class="flex-1 overflow-y-auto">
                    <% if (typeof pendingSurveys !== 'undefined' && pendingSurveys.length > 0) { %>
                    <div class="space-y-0">
                        <% pendingSurveys.forEach(survey => { %>
                        <div class="flex items-center justify-between gap-4 py-4 border-t border-border">
                            <div class="min-w-0">
                                <h3 class="font-semibold text-foreground truncate"><%= survey.eventname %></h3>
                                <p class="text-sm text-muted-foreground"><%= new Date(survey.eventdatetimestart).toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric', year: 'numeric' }) %><% if (survey.eventlocation) { %> · <%= survey.eventlocation %><% } %></p>
                            </div>
                            <a href="/surveys/take/<%= survey.sessionid %>" class="btn-dark">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path d="M15 3h6v6"></path>
                                    <path d="M10 14 21 3"></path>
                                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                                </svg>
                                Take Survey
                            </a>
                        </div>
                        <% }); %>
                    </div>
                    <% } else { %>
                    <div class="text-center py-8 flex-1 flex flex-col items-center justify-center">
                        <p class="text-sm text-muted-foreground mb-1">All caught up!</p>
                        <p class="text-xs text-muted-foreground mb-4">No pending surveys at this time</p>
                        <a href="/surveys" class="btn-dark">View Past Surveys</a>
                    </div>
                    <% } %>
                </div>
            </div>

            <!-- Right Column: Milestones (stacked) -->
            <div class="flex flex-col gap-4 min-h-0">
                <!-- Milestones Count (Top) -->
                <div class="card-elevated p-6 animate-fade-in" style="animation-delay: 0.3s;">
                    <div class="flex items-start gap-3 mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 icon-pink flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2">
                            <path d="M11.525 2.295a.53.53 0 0 1 .95 0l2.31 4.679a2.123 2.123 0 0 0 1.595 1.16l5.166.756a.53.53 0 0 1 .294.904l-3.736 3.638a2.123 2.123 0 0 0-.611 1.878l.882 5.14a.53.53 0 0 1-.771.56l-4.618-2.428a2.122 2.122 0 0 0-1.973 0L6.396 21.01a.53.53 0 0 1-.77-.56l.881-5.139a2.122 2.122 0 0 0-.611-1.879L2.16 9.795a.53.53 0 0 1 .294-.906l5.165-.755a2.122 2.122 0 0 0 1.597-1.16z"></path>
                        </svg>
                        <div>
                            <h2 class="font-semibold text-lg text-foreground">Milestones Achieved</h2>
                            <p class="text-sm text-muted-foreground">Your accomplishments</p>
                        </div>
                    </div>
                    <div class="text-center py-4">
                        <p class="text-4xl font-bold text-foreground"><%= typeof milestoneCount !== 'undefined' ? milestoneCount : 0 %></p>
                    </div>
                    <a href="/milestones" class="w-full text-center text-sm font-medium text-foreground hover:text-accent transition-colors py-2 border-t border-border block">
                        View All Milestones
                    </a>
                </div>

                <!-- Most Recent Milestone (Bottom) -->
                <div class="card-elevated p-6 flex-1 min-h-0 animate-fade-in" style="animation-delay: 0.4s;">
                    <div class="flex items-start gap-3 mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 icon-success flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M20 6 9 17l-5-5"></path>
                        </svg>
                        <div>
                            <h2 class="font-semibold text-lg text-foreground">Most Recent Milesstone Achievement</h2>
                            <p class="text-sm text-muted-foreground">Latest achievement</p>
                        </div>
                    </div>
                    <% if (typeof mostRecentMilestone !== 'undefined' && mostRecentMilestone) { %>
                    <div class="text-center py-6">
                        <div class="w-10 h-10 rounded-full bg-success\/20 flex items-center justify-center mx-auto mb-3">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M20 6 9 17l-5-5"></path>
                            </svg>
                        </div>
                        <p class="font-bold text-foreground text-lg"><%= mostRecentMilestone.milestonetitle %></p>
                        <p class="text-success text-sm font-medium mt-1">Congratulations!</p>
                    </div>
                    <% } else { %>
                    <div class="text-center py-6 flex-1 flex flex-col items-center justify-center">
                        <p class="text-sm text-muted-foreground mb-1">No milestones yet</p>
                        <p class="text-xs text-muted-foreground">Keep going — you're on your way!</p>
                    </div>
                    <% } %>
                </div>
            </div>
            </div><!-- End 3-column grid -->
            <% } %>

            <% if (user.role === 'manager') { %>
            <!-- Quick Actions Section -->
            <div class="mb-8">
                <h2 class="text-2xl font-semibold text-card-foreground mb-6">Quick Actions</h2>
                <div class="flex flex-wrap gap-6 justify-center">
                <a href="/events/create" class="flex items-center justify-center rounded-md text-sm font-medium px-10 py-3 gap-2 transition-colors" style="background-color: hsl(var(--primary)) !important; color: white !important; width: 240px !important; min-width: 240px !important; flex-shrink: 0 !important;" onmouseover="this.style.backgroundColor='hsl(126, 21%, 62%)'" onmouseout="this.style.backgroundColor='hsl(var(--primary))'">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: white !important;">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Create Event
                </a>
                <a href="/signup?role=user" class="flex items-center justify-center rounded-md text-sm font-medium px-10 py-3 gap-2 transition-colors" style="background-color: hsl(var(--primary)) !important; color: white !important; width: 240px !important; min-width: 240px !important; flex-shrink: 0 !important;" onmouseover="this.style.backgroundColor='hsl(126, 21%, 62%)'" onmouseout="this.style.backgroundColor='hsl(var(--primary))'">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: white !important;">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Add User
                </a>
                <button onclick="openAddMilestoneModal()" class="flex items-center justify-center rounded-md text-sm font-medium px-10 py-3 gap-2 transition-colors" style="background-color: hsl(var(--primary)) !important; color: white !important; width: 240px !important; min-width: 240px !important; flex-shrink: 0 !important;" onmouseover="this.style.backgroundColor='hsl(126, 21%, 62%)'" onmouseout="this.style.backgroundColor='hsl(var(--primary))'">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: white !important;">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Add Milestone
                </button>
                <a href="/dashboard" class="flex items-center justify-center rounded-md text-sm font-medium px-10 py-3 gap-2 transition-colors" style="background-color: hsl(var(--primary)) !important; color: white !important; width: 240px !important; min-width: 240px !important; flex-shrink: 0 !important;" onmouseover="this.style.backgroundColor='hsl(126, 21%, 62%)'" onmouseout="this.style.backgroundColor='hsl(var(--primary))'">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: white !important;">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                    View Dashboard
                </a>
                </div>
            </div>

            <!-- Key Metrics Section -->
            <div class="mb-8">
                <h2 class="text-2xl font-semibold text-card-foreground mb-6">Key Metrics & Performance Overviews</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Active Participants -->
                <div class="bg-card rounded-lg p-6 shadow-sm">
                    <div class="flex items-center justify-between mb-2">
                        <h3 class="text-sm font-medium text-card-foreground/70">Active Participants</h3>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
                        </svg>
                    </div>
                    <p class="text-3xl font-semibold text-secondary"><%= typeof activeParticipantsCount !== 'undefined' ? activeParticipantsCount.toLocaleString('en-US') : '0' %></p>
                    <p class="text-xs text-card-foreground/70 mt-1">total enrolled</p>
                </div>

                <!-- Upcoming Events -->
                <div class="bg-card rounded-lg p-6 shadow-sm">
                    <div class="flex items-center justify-between mb-2">
                        <h3 class="text-sm font-medium text-card-foreground/70">Upcoming Events</h3>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <p class="text-3xl font-semibold text-accent"><%= typeof upcomingEventsCount !== 'undefined' ? upcomingEventsCount.toLocaleString('en-US') : '0' %></p>
                    <p class="text-xs text-card-foreground/70 mt-1">scheduled events</p>
                </div>

                <!-- Milestones Achieved -->
                <div class="bg-card rounded-lg p-6 shadow-sm">
                    <div class="flex items-center justify-between mb-2">
                        <h3 class="text-sm font-medium text-card-foreground/70">Milestones Achieved</h3>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                    </div>
                    <p class="text-3xl font-semibold text-secondary"><%= typeof milestonesAchievedCount !== 'undefined' ? milestonesAchievedCount.toLocaleString('en-US') : '0' %></p>
                    <p class="text-xs text-card-foreground/70 mt-1">total achieved</p>
                </div>

                <!-- Donations This Month -->
                <div class="bg-card rounded-lg p-6 shadow-sm">
                    <div class="flex items-center justify-between mb-2">
                        <h3 class="text-sm font-medium text-card-foreground/70">Donations This Month</h3>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                        </svg>
                    </div>
                    <p class="text-3xl font-semibold text-accent">$<%= typeof donationsThisMonth !== 'undefined' ? donationsThisMonth.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) : '0.00' %></p>
                    <p class="text-xs text-card-foreground/70 mt-1">total donations</p>
                </div>

                <!-- Net Promoter Score -->
                <div class="bg-card rounded-lg p-6 shadow-sm">
                    <div class="flex items-center justify-between mb-2">
                        <h3 class="text-sm font-medium text-card-foreground/70">Net Promoter Score</h3>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                        </svg>
                    </div>
                    <p class="text-3xl font-semibold text-secondary"><%= typeof netPromoterScore !== 'undefined' ? netPromoterScore.toLocaleString('en-US') : '0' %></p>
                    <p class="text-xs text-card-foreground/70 mt-1">
                        <% if (typeof netPromoterScore !== 'undefined' && netPromoterScore >= 70) { %>Excellent
                        <% } else if (typeof netPromoterScore !== 'undefined' && netPromoterScore >= 50) { %>Great
                        <% } else if (typeof netPromoterScore !== 'undefined' && netPromoterScore >= 0) { %>Good
                        <% } else { %>Needs Improvement<% } %>
                    </p>
                </div>

                <!-- Survey Response Rate -->
                <div class="bg-card rounded-lg p-6 shadow-sm">
                    <div class="flex items-center justify-between mb-2">
                        <h3 class="text-sm font-medium text-card-foreground/70">Survey Response Rate</h3>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <p class="text-3xl font-semibold text-accent"><%= typeof surveyResponseRate !== 'undefined' ? surveyResponseRate.toFixed(1) : '0.0' %>%</p>
                    <p class="text-xs text-card-foreground/70 mt-1">attended events with surveys</p>
                </div>
            </div>
            </div>

            <!-- Charts Section -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Low Registrations -->
                <div class="bg-card rounded-lg p-6 shadow-sm">
                    <h3 class="text-lg font-semibold text-card-foreground mb-4">Low Registrations</h3>
                    <% if (typeof lowRegistrationEvents !== 'undefined' && lowRegistrationEvents.length > 0) { %>
                    <div class="space-y-2">
                        <% lowRegistrationEvents.forEach(event => { %>
                        <div class="p-4 bg-muted/30 rounded-lg border border-border hover:bg-muted/50 transition-colors">
                            <div class="flex items-center justify-between gap-4">
                                <div class="flex-1 min-w-0">
                                    <h4 class="text-sm font-semibold text-card-foreground mb-1 truncate"><%= event.eventname %></h4>
                                    <p class="text-xs text-card-foreground/70">
                                        <span class="font-semibold text-destructive"><%= event.registeredCount %></span> / <span class="font-semibold"><%= event.capacity %></span> (<%= event.registrationPercentage %>%)
                                    </p>
                                </div>
                                <a href="/events/<%= event.sessionid %>" class="inline-flex items-center justify-center rounded-md text-xs font-medium bg-primary text-primary-foreground hover:bg-primary/90 px-4 py-2 whitespace-nowrap flex-shrink-0">
                                    View Details
                                </a>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                    <% } else { %>
                    <div class="text-center py-8">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 mx-auto text-muted-foreground mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <p class="text-sm text-card-foreground/70">All upcoming events have good registration rates.</p>
                    </div>
                    <% } %>
                </div>

                <!-- Milestone Achievements -->
                <div class="bg-card rounded-lg p-6 shadow-sm">
                    <h3 class="text-lg font-semibold text-card-foreground mb-6">Milestone Achievements</h3>
                    <% if (typeof milestonesThisMonth !== 'undefined') { %>
                    <div class="mb-6 pb-6 border-b border-border">
                        <p class="text-xs text-card-foreground/60 mb-2 uppercase tracking-wide">Milestones reached this month</p>
                        <p class="text-3xl font-bold text-card-foreground"><%= milestonesThisMonth.toLocaleString('en-US') %></p>
                    </div>
                    <% if (typeof topMilestonesThisMonth !== 'undefined' && topMilestonesThisMonth.length > 0) { %>
                    <div>
                        <p class="text-sm font-medium text-card-foreground/70 mb-3">Top milestones this month</p>
                        <div class="space-y-2">
                            <% topMilestonesThisMonth.forEach((milestone, index) => { %>
                            <div class="flex items-center justify-between p-3 bg-muted/30 rounded-lg hover:bg-muted/50 transition-colors">
                                <div class="flex items-center gap-3">
                                    <div class="flex-shrink-0 w-6 h-6 rounded-full bg-secondary/20 flex items-center justify-center">
                                        <span class="text-xs font-bold text-secondary"><%= index + 1 %></span>
                                    </div>
                                    <span class="text-sm font-medium text-card-foreground"><%= milestone.milestonetitle %></span>
                                </div>
                                <span class="text-sm font-semibold text-secondary"><%= milestone.count %></span>
                            </div>
                            <% }); %>
                        </div>
                    </div>
                    <% } else { %>
                    <div class="text-center py-6">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mx-auto text-muted-foreground mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                        </svg>
                        <p class="text-sm text-card-foreground/70">No milestones reached this month yet.</p>
                    </div>
                    <% } %>
                    <% } else { %>
                    <div class="text-center py-6">
                        <p class="text-sm text-card-foreground/70">Loading milestone data...</p>
                    </div>
                    <% } %>
                </div>
            </div>

            <% } %>

            <!-- Add Milestone Modal (Managers Only) -->
            <% if (user.role === 'manager') { %>
            <div id="addMilestoneModal" class="fixed inset-0 z-50 hidden flex items-center justify-center">
                <div class="absolute inset-0 bg-black/50" onclick="closeAddMilestoneModal()"></div>
                <div class="relative bg-card rounded-lg shadow-xl w-full max-w-md mx-4">
                    <div class="p-6 border-b border-border flex items-center justify-between">
                        <h3 class="text-lg font-semibold text-card-foreground">Add Milestone</h3>
                        <button onclick="closeAddMilestoneModal()" class="text-card-foreground/50 hover:text-card-foreground">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </button>
                    </div>
                    <form method="POST" action="/milestones/add" class="p-6">
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-card-foreground mb-2">Participant</label>
                            <select name="userId" required class="w-full px-3 py-2 border border-border rounded-lg bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary">
                                <option value="">Select participant...</option>
                                <% if (typeof participants !== 'undefined') { %>
                                    <% participants.forEach(p => { %>
                                    <option value="<%= p.userid %>"><%= p.userfirstname %> <%= p.userlastname %> (<%= p.useremail %>)</option>
                                    <% }); %>
                                <% } %>
                            </select>
                        </div>
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-card-foreground mb-2">Milestone Type</label>
                            <select name="milestoneId" required class="w-full px-3 py-2 border border-border rounded-lg bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary">
                                <option value="">Select milestone...</option>
                                <% if (typeof milestoneTypes !== 'undefined') { %>
                                    <% milestoneTypes.forEach(mt => { %>
                                    <option value="<%= mt.milestoneid %>"><%= mt.milestonetitle %></option>
                                    <% }); %>
                                <% } %>
                            </select>
                        </div>
                        <div class="mb-6">
                            <label class="block text-sm font-medium text-card-foreground mb-2">Date Achieved</label>
                            <input type="date" name="milestoneDate" required 
                                   max="<%= new Date().toISOString().split('T')[0] %>"
                                   class="w-full px-3 py-2 border border-border rounded-lg bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary">
                        </div>
                        <div class="flex gap-3">
                            <button type="button" onclick="closeAddMilestoneModal()" class="flex-1 px-4 py-2 border border-border text-card-foreground rounded-lg hover:bg-muted/50 transition-colors">
                                Cancel
                            </button>
                            <button type="submit" class="flex-1 px-4 py-2 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-colors font-medium">
                                Add Milestone
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <% } %>
        </div>
    </main>

    <script>
        function openAddMilestoneModal() {
            document.getElementById('addMilestoneModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeAddMilestoneModal() {
            const addForm = document.querySelector('#addMilestoneModal form');
            if (addForm) {
                addForm.reset();
            }
            document.getElementById('addMilestoneModal').classList.add('hidden');
            document.body.style.overflow = '';
        }
    </script>
</body>
</html>

