                </form>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="w-full px-6 py-8 md:py-10 border-t border-border mt-12">
        <div class="container mx-auto max-w-6xl text-center">
            <p class="text-sm text-muted-foreground mb-2">
                Â© 2024 Ella Rises. All rights reserved.
            </p>
            <p class="text-sm text-muted-foreground">
                Empowering young women through education and opportunity.
            </p>
        </div>
    </footer>

    <script>
        // Handle donation amount button clicks
        document.querySelectorAll('.donation-amount-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                // Remove active state from all buttons
                document.querySelectorAll('.donation-amount-btn').forEach(b => {
                    b.classList.remove('bg-accent', 'text-accent-foreground', 'border-accent');
                    b.classList.add('bg-background', 'text-foreground', 'border-input');
                });
                
                // Add active state to clicked button
                this.classList.remove('bg-background', 'text-foreground', 'border-input');
                this.classList.add('bg-accent', 'text-accent-foreground', 'border-accent');
                
                // Set the amount in the input field
                const amount = this.getAttribute('data-amount');
                document.getElementById('donationAmount').value = amount;
            });
        });

        // Update button styles when custom amount is entered
        document.getElementById('donationAmount').addEventListener('input', function() {
            const customAmount = this.value;
            const presetAmounts = ['25', '50', '100', '250', '500'];
            
            if (!presetAmounts.includes(customAmount)) {
                // Remove active state from all buttons if custom amount doesn't match
                document.querySelectorAll('.donation-amount-btn').forEach(b => {
                    b.classList.remove('bg-accent', 'text-accent-foreground', 'border-accent');
                    b.classList.add('bg-background', 'text-foreground', 'border-input');
                });
            }
        });

        // Handle payment method selection
        const paymentMethodSelect = document.getElementById('paymentMethod');
        const paymentSections = {
            'credit': document.getElementById('creditCardSection'),
            'debit': document.getElementById('debitCardSection'),
            'paypal': document.getElementById('paypalSection'),
            'bank': document.getElementById('bankSection')
        };

        paymentMethodSelect.addEventListener('change', function() {
            const selectedMethod = this.value;
            
            // Hide all payment sections
            Object.values(paymentSections).forEach(section => {
                if (section) {
                    section.classList.add('hidden');
                    // Clear required attributes when hidden
                    const inputs = section.querySelectorAll('input[required]');
                    inputs.forEach(input => {
                        input.removeAttribute('required');
                    });
                }
            });
            
            // Show selected payment section
            if (selectedMethod && paymentSections[selectedMethod]) {
                paymentSections[selectedMethod].classList.remove('hidden');
                // Add required attributes back when shown
                const inputs = paymentSections[selectedMethod].querySelectorAll('input[required]');
                inputs.forEach(input => {
                    input.setAttribute('required', 'required');
                });
            }
        });

        // Format card number input (add spaces every 4 digits)
        function formatCardNumber(input) {
            let value = input.value.replace(/\s/g, '');
            let formattedValue = value.match(/.{1,4}/g)?.join(' ') || value;
            if (formattedValue.length > 19) formattedValue = formattedValue.substring(0, 19);
            input.value = formattedValue;
        }

        // Format expiry date input (MM/YY)
        function formatExpiryDate(input) {
            let value = input.value.replace(/\D/g, '');
            if (value.length >= 2) {
                value = value.substring(0, 2) + '/' + value.substring(2, 4);
            }
            if (value.length > 5) value = value.substring(0, 5);
            input.value = value;
        }

        // Add event listeners for card number formatting
        const cardNumberInputs = ['cardNumber', 'debitCardNumber'];
        cardNumberInputs.forEach(id => {
            const input = document.getElementById(id);
            if (input) {
                input.addEventListener('input', function() {
                    formatCardNumber(this);
                });
            }
        });

        // Add event listeners for expiry date formatting
        const expiryInputs = ['expiryDate', 'debitExpiryDate'];
        expiryInputs.forEach(id => {
            const input = document.getElementById(id);
            if (input) {
                input.addEventListener('input', function() {
                    formatExpiryDate(this);
                });
            }
        });

        // Restrict CVV to numbers only
        const cvvInputs = ['cvv', 'debitCvv'];
        cvvInputs.forEach(id => {
            const input = document.getElementById(id);
            if (input) {
                input.addEventListener('input', function() {
                    this.value = this.value.replace(/\D/g, '');
                });
            }
        });

        // Fill proxy data function
        function fillProxyData(paymentMethod) {
