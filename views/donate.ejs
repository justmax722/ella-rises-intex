        function fillProxyData(method) {
            if (method === 'credit') {
                document.getElementById('creditCardNumber').value = '4111 1111 1111 1111';
                document.getElementById('creditExpiry').value = '12/25';
                document.getElementById('creditCVV').value = '123';
                document.getElementById('creditName').value = 'John Doe';
                // Don't fill email - user must enter it
            } else if (method === 'debit') {
                document.getElementById('debitCardNumber').value = '4111 1111 1111 1111';
                document.getElementById('debitExpiry').value = '12/25';
                document.getElementById('debitCVV').value = '123';
                document.getElementById('debitName').value = 'John Doe';
                // Don't fill email - user must enter it
            } else if (method === 'paypal') {
                // Don't fill email - user must enter it
            } else if (method === 'bank') {
                document.getElementById('bankAccountNumber').value = '1234567890';
                document.getElementById('bankRoutingNumber').value = '123456789';
                document.getElementById('bankName').value = 'Test Bank';
                // Don't fill email - user must enter it
            }
        }
    </script>
