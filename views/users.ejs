<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users - Ella Rises CRM</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-background min-h-screen flex">
    <!-- Sidebar Navigation -->
    <%- include('partials/sidebar', { user: user, currentPage: 'users' }) %>

    <!-- Main Content Area -->
    <main class="flex-1 p-6 md:p-8">
        <div class="max-w-7xl mx-auto">
            <!-- Page Header -->
            <div class="mb-8 flex items-center justify-between">
                <div>
                    <h1 class="text-3xl md:text-4xl font-serif text-foreground mb-2">Users</h1>
                    <p class="text-base text-card-foreground/70">Manage system users and permissions</p>
                </div>
                <% if (user.role === 'manager') { %>
                <button class="px-4 py-2.5 bg-primary text-primary-foreground rounded-md font-medium hover:bg-primary/90 transition-colors">
                    + Add User
                </button>
                <% } %>
            </div>

            <!-- Success/Error Messages -->
            <% if (typeof query !== 'undefined' && query.success) { %>
            <div class="mb-6 p-4 bg-secondary/20 border border-secondary rounded-md">
                <p class="text-sm text-card-foreground text-center">
                    <% if (query.success === 'user_updated') { %>
                        User updated successfully.
                    <% } else if (query.success === 'role_updated') { %>
                        User role updated successfully.
                    <% } else if (query.success === 'user_updated_with_password') { %>
                        User updated successfully. Password has been set.
                    <% } else if (query.success === 'user_deleted') { %>
                        User deleted successfully.
                    <% } %>
                </p>
            </div>
            <% } %>
            <% if (typeof query !== 'undefined' && query.error) { %>
            <div class="mb-6 p-4 bg-destructive/10 border border-destructive/20 rounded-md">
                <p class="text-sm text-destructive text-center">
                    <% if (query.error === 'demo_accounts_cannot_be_modified') { %>
                        Demo accounts cannot be modified.
                    <% } else if (query.error === 'demo_accounts_cannot_be_deleted') { %>
                        Demo accounts cannot be deleted.
                    <% } else if (query.error === 'cannot_delete_yourself') { %>
                        You cannot delete your own account.
                    <% } else if (query.error === 'update_failed') { %>
                        Failed to update user. Please try again.
                    <% } else if (query.error === 'password_too_short') { %>
                        Password must be at least 6 characters long.
                    <% } else if (query.error === 'delete_failed') { %>
                        Failed to delete user. Please try again.
                    <% } else if (query.error === 'user_not_found') { %>
                        User not found.
                    <% } %>
                </p>
            </div>
            <% } %>

            <!-- Search and Filters -->
            <div class="bg-card rounded-lg shadow-sm p-6 mb-6">
                <form method="GET" action="/users" id="filterForm">
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
                        <!-- Search Bar -->
                        <div class="md:col-span-2">
                            <label for="search" class="block text-sm font-medium text-card-foreground mb-2">Search</label>
                            <input type="text" id="search" name="search" value="<%= typeof query !== 'undefined' && query.search ? query.search : '' %>" placeholder="Search by name or email..." class="w-full px-4 py-2.5 border border-input rounded-md bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent transition-colors">
                        </div>

                        <!-- Role Filter -->
                        <div>
                            <label class="block text-sm font-medium text-card-foreground mb-2">Role</label>
                            <div class="relative">
                                <div class="border border-input rounded-md bg-background p-2 max-h-40 overflow-y-auto">
                                    <% if (typeof roles !== 'undefined' && roles.length > 0) { %>
                                        <% roles.forEach(function(role) { %>
                                            <% 
                                                const isChecked = typeof query !== 'undefined' && query.role && 
                                                    (Array.isArray(query.role) ? query.role.includes(String(role.roleid)) : query.role == role.roleid);
                                            %>
                                            <label class="flex items-center gap-2 cursor-pointer py-1 px-2 hover:bg-muted/50 rounded">
                                                <input type="checkbox" name="role" value="<%= role.roleid %>" <%= isChecked ? 'checked' : '' %> class="w-4 h-4 border border-input rounded bg-background text-primary focus:ring-2 focus:ring-ring cursor-pointer role-checkbox">
                                                <span class="text-sm text-card-foreground"><%= role.rolename %></span>
                                            </label>
                                        <% }); %>
                                    <% } else { %>
                                        <p class="text-xs text-card-foreground/70 p-2">No roles available</p>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <!-- Status Filter -->
                        <div>
                            <label class="block text-sm font-medium text-card-foreground mb-2">Status</label>
                            <div class="border border-input rounded-md bg-background p-2">
                                <% 
                                    const activeChecked = typeof query !== 'undefined' && query.status && 
                                        (Array.isArray(query.status) ? query.status.includes('active') : query.status === 'active');
                                    const inactiveChecked = typeof query !== 'undefined' && query.status && 
                                        (Array.isArray(query.status) ? query.status.includes('inactive') : query.status === 'inactive');
                                %>
                                <label class="flex items-center gap-2 cursor-pointer py-1 px-2 hover:bg-muted/50 rounded">
                                    <input type="checkbox" name="status" value="active" <%= activeChecked ? 'checked' : '' %> class="w-4 h-4 border border-input rounded bg-background text-primary focus:ring-2 focus:ring-ring cursor-pointer status-checkbox">
                                    <span class="text-sm text-card-foreground">Active</span>
                                </label>
                                <label class="flex items-center gap-2 cursor-pointer py-1 px-2 hover:bg-muted/50 rounded">
                                    <input type="checkbox" name="status" value="inactive" <%= inactiveChecked ? 'checked' : '' %> class="w-4 h-4 border border-input rounded bg-background text-primary focus:ring-2 focus:ring-ring cursor-pointer status-checkbox">
                                    <span class="text-sm text-card-foreground">Inactive</span>
                                </label>
                            </div>
                        </div>

                        <!-- Clear Button -->
                        <div>
                            <a href="/users" class="block px-4 py-2.5 border border-input rounded-md text-sm font-medium text-card-foreground hover:bg-muted transition-colors text-center">
                                Clear
                            </a>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Users Table -->
            <div class="bg-card rounded-lg shadow-sm overflow-hidden">
                <div class="p-6 border-b border-border">
                    <h3 class="text-lg font-semibold text-card-foreground">System Users</h3>
                </div>
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-muted/50 border-b border-border">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-card-foreground uppercase tracking-wider">Name</th>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-card-foreground uppercase tracking-wider">Email</th>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-card-foreground uppercase tracking-wider">Role</th>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-card-foreground uppercase tracking-wider">Status</th>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-card-foreground uppercase tracking-wider">Total Donations</th>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-card-foreground uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-border">
                            <% if (typeof users !== 'undefined' && users.length > 0) { %>
                                <% users.forEach(function(user) { %>
                                    <tr class="hover:bg-muted/30 transition-colors">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-medium text-card-foreground">
                                                <%= (user.userfirstname || '') + ' ' + (user.userlastname || '') || 'N/A' %>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm text-card-foreground/70"><%= user.useremail %></div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary text-primary-foreground">
                                                <%= user.rolename || 'N/A' %>
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <% if (user.accountactive) { %>
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-secondary text-secondary-foreground">Active</span>
                                            <% } else { %>
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-destructive/20 text-destructive">Inactive</span>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm text-card-foreground/70">
                                                $<%= user.totaldonations ? parseFloat(user.totaldonations).toFixed(2) : '0.00' %>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                                            <a href="/users/edit/<%= user.userid %>" class="text-accent hover:text-accent/80 mr-3">Edit</a>
                                            <button 
                                                type="button"
                                                class="text-destructive hover:text-destructive/80 delete-user-btn"
                                                data-userid="<%= user.userid %>"
                                                data-username="<%= (user.userfirstname || '') + ' ' + (user.userlastname || '') || user.useremail %>"
                                                data-useremail="<%= user.useremail %>"
                                            >
                                                Delete
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="px-6 py-4 text-center text-sm text-card-foreground/70">
                                        No users found.
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>

    <!-- Edit User Modal -->
    <div id="editModal" class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50">
        <div class="bg-card rounded-lg p-6 max-w-md w-full mx-4 shadow-lg max-h-[90vh] overflow-y-auto">
            <h3 class="text-xl font-semibold text-card-foreground mb-4">Edit User</h3>
            <form id="editUserForm" method="POST" action="/users/update">
                <input type="hidden" id="editUserEmail" name="email" />
                <div class="mb-4">
                    <label class="block text-sm font-medium text-card-foreground mb-2">Role</label>
                    <select id="editUserRole" name="role" class="w-full px-4 py-2.5 border border-input rounded-md bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent transition-colors">
                        <option value="manager">Manager</option>
                        <option value="user">User</option>
                        <option value="donor">Donor</option>
                    </select>
                </div>
                
                <!-- Password Management Section -->
                <div class="mb-4">
                    <button type="button" id="togglePasswordSection" onclick="togglePasswordSection()" class="text-sm text-accent hover:text-accent/80 mb-2">
                        + Set Password
                    </button>
                    <div id="passwordSection" class="hidden space-y-3">
                        <div>
                            <label class="block text-sm font-medium text-card-foreground mb-2">New Password</label>
                            <input 
                                type="password" 
                                id="editUserPassword" 
                                name="password" 
                                minlength="6"
                                placeholder="Enter new password"
                                class="w-full px-4 py-2.5 border border-input rounded-md bg-background text-foreground placeholder:text-muted-foreground/50 focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent transition-colors"
                            />
                            <p class="text-xs text-muted-foreground mt-1">Password must be at least 6 characters long</p>
                        </div>
                        <p class="text-xs text-muted-foreground">Setting a password will allow the user to login. They will be required to change it on first login to activate their account.</p>
                    </div>
                </div>

                <div class="flex gap-3 justify-end">
                    <button type="button" onclick="closeEditModal()" class="px-4 py-2 border border-input rounded-md text-sm font-medium text-card-foreground hover:bg-muted transition-colors">Cancel</button>
                    <button type="submit" class="px-4 py-2 bg-primary text-primary-foreground rounded-md text-sm font-medium hover:bg-primary/90 transition-colors">Save Changes</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Delete modal state
        let deleteUserId = null;
        
        function openDeleteModal(userId, userName, userEmail) {
            deleteUserId = userId;
            const displayName = userName.trim() || userEmail;
            document.getElementById('deleteUserName').textContent = displayName;
            document.getElementById('deleteModal').classList.remove('hidden');
        }
        
        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.add('hidden');
            deleteUserId = null;
        function editUser(email, currentRole) {
            document.getElementById('editUserEmail').value = email;
            document.getElementById('editUserRole').value = currentRole;
            // Reset password section
            document.getElementById('passwordSection').classList.add('hidden');
            document.getElementById('editUserPassword').value = '';
            document.getElementById('editModal').classList.remove('hidden');
        }

        function togglePasswordSection() {
            const passwordSection = document.getElementById('passwordSection');
            const toggleButton = document.getElementById('togglePasswordSection');
            if (passwordSection.classList.contains('hidden')) {
                passwordSection.classList.remove('hidden');
                toggleButton.textContent = '- Cancel Password Change';
            } else {
                passwordSection.classList.add('hidden');
                document.getElementById('editUserPassword').value = '';
                toggleButton.textContent = '+ Set Password';
            }
        }

        function closeEditModal() {
            document.getElementById('editModal').classList.add('hidden');
            // Reset password section
            document.getElementById('passwordSection').classList.add('hidden');
            document.getElementById('editUserPassword').value = '';
        }
        
        // Handle delete button clicks using event delegation
        document.addEventListener('click', function(e) {
            if (e.target && e.target.classList.contains('delete-user-btn')) {
                const userId = e.target.getAttribute('data-userid');
                const userName = e.target.getAttribute('data-username');
                const userEmail = e.target.getAttribute('data-useremail');
                openDeleteModal(userId, userName, userEmail);
            }
        });
        
        function confirmDelete() {
            if (!deleteUserId) return;
            
            // Save current scroll position
            const scrollPosition = window.scrollY || window.pageYOffset;
            
            // Delete user via fetch
            fetch(`/users/delete/${deleteUserId}`, {
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Close modal
                    closeDeleteModal();
                    
                    // Refresh the user list using the same approach as filters
                    const filterForm = document.getElementById('filterForm');
                    if (!filterForm) {
                        window.location.href = '/users?success=user_deleted';
                        return;
                    }
                    
                    const formData = new FormData(filterForm);
                    const params = new URLSearchParams();
                    
                    if (formData.get('search')) {
                        params.append('search', formData.get('search'));
                    }
                    
                    formData.getAll('role').forEach(role => {
                        params.append('role', role);
                    });
                    
                    formData.getAll('status').forEach(status => {
                        params.append('status', status);
                    });
                    
                    // Add success parameter
                    params.append('success', 'user_deleted');
                    
                    fetch('/users?' + params.toString(), {
                        method: 'GET',
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    })
                    .then(response => response.text())
                    .then(html => {
                        const parser = new DOMParser();
                        const doc = parser.parseFromString(html, 'text/html');
                        
                        // Update the entire main content area to get messages and table
                        const newMain = doc.querySelector('main');
                        const currentMain = document.querySelector('main');
                        if (newMain && currentMain) {
                            // Save scroll position before update
                            const scrollPos = window.scrollY || window.pageYOffset;
                            
                            // Update main content
                            currentMain.innerHTML = newMain.innerHTML;
                            
                            // Restore scroll position
                            window.scrollTo(0, scrollPos);
                            
                            // Re-initialize all event listeners
                            initializeSearchInput();
                            initializeCheckboxes();
                        }
                        
                        // Update URL without reload
                        window.history.pushState({}, '', '/users?' + params.toString());
                    })
                    .catch(error => {
                        console.error('Error refreshing list:', error);
                        // Fallback to page reload
                        window.location.href = '/users?success=user_deleted';
                    });
                } else {
                    alert(data.message || 'Failed to delete user. Please try again.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while deleting the user. Please try again.');
            });
        }
        
        // Close modal on outside click
        document.getElementById('deleteModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeDeleteModal();
            }
        });
    </script>

    <script>
        // Real-time search with debouncing - using fetch to prevent scroll to top
        let searchTimeout;
        
        function submitFilters() {
            const filterForm = document.getElementById('filterForm');
            if (!filterForm) return;
            
            const formData = new FormData(filterForm);
            const params = new URLSearchParams();
            
            // Add search
            if (formData.get('search')) {
                params.append('search', formData.get('search'));
            }
            
            // Add roles (multiple)
            formData.getAll('role').forEach(role => {
                params.append('role', role);
            });
            
            // Add statuses (multiple)
            formData.getAll('status').forEach(status => {
                params.append('status', status);
            });
            
            // Save current scroll position
            const scrollPosition = window.scrollY || window.pageYOffset;
            
            // Use fetch to update the page
            fetch('/users?' + params.toString(), {
                method: 'GET',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.text())
            .then(html => {
                // Parse the response
                const parser = new DOMParser();
                const doc = parser.parseFromString(html, 'text/html');
                
                // Update only the table section (the second card with overflow-hidden)
                const newTableContainer = doc.querySelector('.bg-card.rounded-lg.shadow-sm.overflow-hidden:last-of-type');
                const currentTableContainer = document.querySelector('.bg-card.rounded-lg.shadow-sm.overflow-hidden:last-of-type');
                
                if (newTableContainer && currentTableContainer) {
                    currentTableContainer.replaceWith(newTableContainer.cloneNode(true));
                }
                
                // Update URL without reload
                window.history.pushState({}, '', '/users?' + params.toString());
                
                // Restore scroll position
                window.scrollTo(0, scrollPosition);
                
                // Re-initialize event listeners for new checkboxes
                initializeCheckboxes();
            })
            .catch(error => {
                console.error('Error:', error);
                // Fallback to regular form submission
                window.location.href = '/users?' + params.toString();
            });
        }
        
        function initializeCheckboxes() {
            const roleCheckboxes = document.querySelectorAll('.role-checkbox');
            const statusCheckboxes = document.querySelectorAll('.status-checkbox');

            roleCheckboxes.forEach(function(checkbox) {
                checkbox.addEventListener('change', function() {
                    submitFilters();
                });
            });

            statusCheckboxes.forEach(function(checkbox) {
                checkbox.addEventListener('change', function() {
                    submitFilters();
                });
            });
        }
        
        function initializeSearchInput() {
            const searchInput = document.getElementById('search');
            if (searchInput) {
                // Remove existing listener by cloning
                const newInput = searchInput.cloneNode(true);
                searchInput.parentNode.replaceChild(newInput, searchInput);
                
                newInput.addEventListener('input', function() {
                    clearTimeout(searchTimeout);
                    searchTimeout = setTimeout(function() {
                        submitFilters();
                    }, 300); // 300ms delay
                });
            }
        }
        
        // Initialize on page load
        initializeSearchInput();
        initializeCheckboxes();
    </script>
</body>
</html>
