    <!-- Message Modal -->
    <div id="messageModal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black/50" onclick="closeMessageModal(event)">
        <div class="bg-background rounded-lg shadow-lg max-w-2xl w-full mx-4 max-h-[80vh] overflow-hidden" onclick="event.stopPropagation()">
            <div class="p-6 border-b border-border flex items-center justify-between">
                <h3 class="text-lg font-semibold text-card-foreground">Donation Message</h3>
                <button onclick="closeMessageModal()" class="text-muted-foreground hover:text-foreground transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-x">
                        <path d="M18 6 6 18"></path>
                        <path d="M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            <div class="p-6 overflow-y-auto max-h-[60vh]">
                <p id="messageContent" class="text-sm text-card-foreground whitespace-pre-wrap"></p>
            </div>
        </div>
    </div>

    <script>
        // Format donation amount to always show 2 decimal places
        function formatDonationAmount(input) {
            if (input.value && input.value !== '') {
                const value = parseFloat(input.value);
                if (!isNaN(value)) {
                    input.value = value.toFixed(2);
                }
            }
        }
        
        // Add blur event listener to donation amount input
        const embeddedDonationAmountInput = document.getElementById('embeddedDonationAmount');
        if (embeddedDonationAmountInput) {
            embeddedDonationAmountInput.addEventListener('blur', function() {
                formatDonationAmount(this);
            });
            embeddedDonationAmountInput.addEventListener('change', function() {
                formatDonationAmount(this);
            });
        }

        // Message modal functions
        function showMessageModal(message) {
            const modal = document.getElementById('messageModal');
            const content = document.getElementById('messageContent');
            content.textContent = message.replace(/\\n/g, '\n');
            modal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeMessageModal(event) {
            if (event && event.target !== event.currentTarget) {
                return;
            }
            const modal = document.getElementById('messageModal');
            modal.classList.add('hidden');
            document.body.style.overflow = '';
        }

        // Close modal on Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeMessageModal();
            }
        });
        // Auto-hide success message after 5 seconds
        const successMessage = document.getElementById('successMessage');
        if (successMessage) {
            setTimeout(() => {
                successMessage.style.transition = 'opacity 0.5s';
                successMessage.style.opacity = '0';
                setTimeout(() => {
                    successMessage.remove();
                }, 500);
            }, 5000);
        }

        <% if (user.role === 'manager') { %>
        // Search and filter functionality for managers
        const searchInput = document.getElementById('searchInput');
        const dateFrom = document.getElementById('dateFrom');
        const dateTo = document.getElementById('dateTo');
        const clearFilters = document.getElementById('clearFilters');
        const tableBody = document.querySelector('tbody');
        const allRows = Array.from(tableBody.querySelectorAll('tr'));
        const tableRows = allRows.filter(row => !row.querySelector('td[colspan]'));
        const noDonationsRow = allRows.find(row => row.querySelector('td[colspan]'));

        function filterDonations() {
            const searchTerm = searchInput.value.toLowerCase().trim();
            const fromDate = dateFrom.value ? new Date(dateFrom.value) : null;
            const toDate = dateTo.value ? new Date(dateTo.value) : null;
            
            // Set toDate to end of day
            if (toDate) {
                toDate.setHours(23, 59, 59, 999);
            }

            let visibleCount = 0;

            tableRows.forEach(row => {
                const cells = row.querySelectorAll('td');
                const name = (cells[0]?.textContent || '').toLowerCase();
                const email = (cells[1]?.textContent || '').toLowerCase();
                const amount = (cells[2]?.textContent || '').toLowerCase();
                const dateText = cells[3]?.textContent || '';
                const dateValue = dateText ? new Date(dateText) : null;

                // Search filter
                let matchesSearch = true;
                if (searchTerm) {
                    matchesSearch = name.includes(searchTerm) || 
                                   email.includes(searchTerm) || 
                                   amount.includes(searchTerm);
                }

                // Date filter
                let matchesDate = true;
                if (fromDate && dateValue) {
                    matchesDate = matchesDate && dateValue >= fromDate;
                }
                if (toDate && dateValue) {
                    matchesDate = matchesDate && dateValue <= toDate;
                }

                // Show/hide row based on filters
                if (matchesSearch && matchesDate) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });

            // Show/hide "No donations found" message
            if (noDonationsRow) {
                if (visibleCount === 0 && tableRows.length > 0) {
                    noDonationsRow.style.display = '';
                } else {
                    noDonationsRow.style.display = 'none';
                }
            }
        }

        // Debounce search input
        let searchTimeout;
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(filterDonations, 300);
            });
        }

        // Date filter change handlers
        if (dateFrom) {
            dateFrom.addEventListener('change', filterDonations);
        }
        if (dateTo) {
            dateTo.addEventListener('change', filterDonations);
        }

        // Clear filters
        if (clearFilters) {
            clearFilters.addEventListener('click', function() {
                searchInput.value = '';
                dateFrom.value = '';
                dateTo.value = '';
                filterDonations();
            });
        }

        // Sorting functionality
        let currentSort = { column: null, direction: null };

        function sortTable(column) {
            const tbody = document.querySelector('tbody');
            const rows = Array.from(tbody.querySelectorAll('tr')).filter(row => !row.querySelector('td[colspan]'));
            
            // Determine sort direction
            if (currentSort.column === column) {
                // Toggle direction if same column
                currentSort.direction = currentSort.direction === 'asc' ? 'desc' : 'asc';
            } else {
                // New column, start with ascending
                currentSort.column = column;
                currentSort.direction = 'asc';
            }

            // Sort rows
            rows.sort((a, b) => {
                const aCells = a.querySelectorAll('td');
                const bCells = b.querySelectorAll('td');
                
                let aValue, bValue;
                
                if (column === 'amount') {
                    // Extract numeric value from amount (remove $ and commas)
                    aValue = parseFloat(aCells[2]?.textContent?.replace(/[$,]/g, '') || 0);
                    bValue = parseFloat(bCells[2]?.textContent?.replace(/[$,]/g, '') || 0);
                } else if (column === 'date') {
                    // Parse date (format: MM/DD/YYYY from toLocaleDateString)
                    const aDateText = aCells[3]?.textContent?.trim();
                    const bDateText = bCells[3]?.textContent?.trim();
                    
                    // Parse MM/DD/YYYY format
                    const parseDate = (dateStr) => {
                        if (!dateStr) return 0;
                        const parts = dateStr.split('/');
                        if (parts.length === 3) {
                            // MM/DD/YYYY
                            const month = parseInt(parts[0], 10) - 1; // Month is 0-indexed
                            const day = parseInt(parts[1], 10);
                            const year = parseInt(parts[2], 10);
                            return new Date(year, month, day).getTime();
                        }
                        // Fallback to Date constructor
                        return new Date(dateStr).getTime() || 0;
                    };
                    
                    aValue = parseDate(aDateText);
                    bValue = parseDate(bDateText);
                }
                
                if (currentSort.direction === 'asc') {
                    return aValue > bValue ? 1 : aValue < bValue ? -1 : 0;
                } else {
                    return aValue < bValue ? 1 : aValue > bValue ? -1 : 0;
                }
            });

            // Clear tbody and re-append sorted rows
            const noDonationsRow = Array.from(tbody.querySelectorAll('tr')).find(row => row.querySelector('td[colspan]'));
            rows.forEach(row => tbody.removeChild(row));
            rows.forEach(row => tbody.appendChild(row));
            if (noDonationsRow) {
                tbody.appendChild(noDonationsRow);
            }

            // Update arrow icons
            updateSortIcons();
            
            // Reapply filters to maintain filter state
            filterDonations();
        }

        function updateSortIcons() {
            // Reset all icons to neutral state (both up and down)
            const amountIcon = document.getElementById('sortAmountIcon');
            const dateIcon = document.getElementById('sortDateIcon');
            
            if (amountIcon) {
                amountIcon.innerHTML = '<path d="m7 15 5 5 5-5"></path><path d="m7 9 5-5 5 5"></path>';
            }
            if (dateIcon) {
                dateIcon.innerHTML = '<path d="m7 15 5 5 5-5"></path><path d="m7 9 5-5 5 5"></path>';
            }

            // Update active column icon (show only up or down arrow)
            if (currentSort.column === 'amount' && amountIcon) {
                if (currentSort.direction === 'asc') {
                    // Show only up arrow
                    amountIcon.innerHTML = '<path d="m7 15 5 5 5-5"></path>';
                } else {
                    // Show only down arrow
                    amountIcon.innerHTML = '<path d="m7 9 5-5 5 5"></path>';
                }
            } else if (currentSort.column === 'date' && dateIcon) {
                if (currentSort.direction === 'asc') {
                    // Show only up arrow
                    dateIcon.innerHTML = '<path d="m7 15 5 5 5-5"></path>';
                } else {
                    // Show only down arrow
                    dateIcon.innerHTML = '<path d="m7 9 5-5 5 5"></path>';
                }
            }
        }
        <% } %>

        // Embedded Donation Form Functionality
        const toggleDonationFormBtn = document.getElementById('toggleDonationFormBtn');
        const closeDonationFormBtn = document.getElementById('closeDonationFormBtn');
        const cancelDonationFormBtn = document.getElementById('cancelDonationFormBtn');
        const donationFormContainer = document.getElementById('donationFormContainer');
        const embeddedDonationForm = document.getElementById('embeddedDonationForm');

        function showDonationForm() {
            donationFormContainer.classList.remove('hidden');
            // Scroll to form
            donationFormContainer.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }

        function hideDonationForm() {
            donationFormContainer.classList.add('hidden');
            // Reset form
            embeddedDonationForm.reset();
            // Reset payment sections
            document.getElementById('embeddedPaymentDetails').classList.add('hidden');
            document.getElementById('embeddedCardFields').classList.add('hidden');
            document.getElementById('embeddedPaypalField').classList.add('hidden');
            document.getElementById('embeddedBankFields').classList.add('hidden');
            // Reset amount buttons
            document.querySelectorAll('.donation-amount-btn-embedded').forEach(btn => {
                btn.classList.remove('bg-accent', 'text-accent-foreground', 'border-accent');
                btn.classList.add('bg-background', 'text-foreground', 'border-input');
            });
        }

        if (toggleDonationFormBtn) {
            toggleDonationFormBtn.addEventListener('click', showDonationForm);
        }

        if (closeDonationFormBtn) {
            closeDonationFormBtn.addEventListener('click', hideDonationForm);
        }

        if (cancelDonationFormBtn) {
            cancelDonationFormBtn.addEventListener('click', hideDonationForm);
        }

        // Handle donation amount button clicks
        document.querySelectorAll('.donation-amount-btn-embedded').forEach(btn => {
            btn.addEventListener('click', function() {
                // Remove active state from all buttons
                document.querySelectorAll('.donation-amount-btn-embedded').forEach(b => {
                    b.classList.remove('bg-accent', 'text-accent-foreground', 'border-accent');
                    b.classList.add('bg-background', 'text-foreground', 'border-input');
                });
                
                // Add active state to clicked button
                this.classList.remove('bg-background', 'text-foreground', 'border-input');
                this.classList.add('bg-accent', 'text-accent-foreground', 'border-accent');
                
                // Set the amount in the input field
                const amount = this.getAttribute('data-amount');
                document.getElementById('embeddedDonationAmount').value = amount;
            });
        });

        // Update button styles when custom amount is entered
        const embeddedDonationAmount = document.getElementById('embeddedDonationAmount');
        if (embeddedDonationAmount) {
            embeddedDonationAmount.addEventListener('input', function() {
                const customAmount = this.value;
                const presetAmounts = ['25', '50', '100', '250', '500'];
                
                if (!presetAmounts.includes(customAmount)) {
                    // Remove active state from all buttons if custom amount doesn't match
                    document.querySelectorAll('.donation-amount-btn-embedded').forEach(b => {
                        b.classList.remove('bg-accent', 'text-accent-foreground', 'border-accent');
                        b.classList.add('bg-background', 'text-foreground', 'border-input');
                    });
                }
            });
        }

        // Handle payment method selection
        const embeddedPaymentMethod = document.getElementById('embeddedPaymentMethod');
        if (embeddedPaymentMethod) {
            embeddedPaymentMethod.addEventListener('change', function() {
                const selectedMethod = this.value;
                const paymentDetails = document.getElementById('embeddedPaymentDetails');
                const cardFields = document.getElementById('embeddedCardFields');
                const paypalField = document.getElementById('embeddedPaypalField');
                const bankFields = document.getElementById('embeddedBankFields');
                
                // Hide all sections first
                paymentDetails.classList.add('hidden');
                cardFields.classList.add('hidden');
                paypalField.classList.add('hidden');
                bankFields.classList.add('hidden');
                
                // Remove required from all fields
                [cardFields, bankFields].forEach(section => {
                    section.querySelectorAll('input').forEach(input => {
                        input.removeAttribute('required');
                    });
                });
                
                // Show selected payment section
                if (selectedMethod === 'credit' || selectedMethod === 'debit') {
                    paymentDetails.classList.remove('hidden');
                    cardFields.classList.remove('hidden');
                    // Update title and field names based on method
                    const cardTitle = document.getElementById('embeddedCardTitle');
                    if (selectedMethod === 'credit') {
                        if (cardTitle) cardTitle.textContent = 'Credit Card Information';
                        document.getElementById('embeddedCardNumber').name = 'creditCardNumber';
                        document.getElementById('embeddedExpiry').name = 'creditExpiry';
                        document.getElementById('embeddedCVV').name = 'creditCVV';
                        document.getElementById('embeddedCardName').name = 'creditName';
                    } else {
                        if (cardTitle) cardTitle.textContent = 'Debit Card Information';
                        document.getElementById('embeddedCardNumber').name = 'debitCardNumber';
                        document.getElementById('embeddedExpiry').name = 'debitExpiry';
                        document.getElementById('embeddedCVV').name = 'debitCVV';
                        document.getElementById('embeddedCardName').name = 'debitName';
                    }
                    // Add required to card fields
                    cardFields.querySelectorAll('input').forEach(input => {
                        input.setAttribute('required', 'required');
                    });
                } else if (selectedMethod === 'paypal') {
                    paymentDetails.classList.remove('hidden');
                    paypalField.classList.remove('hidden');
                } else if (selectedMethod === 'bank') {
                    paymentDetails.classList.remove('hidden');
                    bankFields.classList.remove('hidden');
                    // Add required to bank fields
                    bankFields.querySelectorAll('input').forEach(input => {
                        input.setAttribute('required', 'required');
                    });
                }
            });
        }

        // Handle form submission - remove required from hidden fields
        if (embeddedDonationForm) {
            embeddedDonationForm.addEventListener('submit', function(e) {
                // Remove required from all hidden payment sections
                document.getElementById('embeddedPaymentDetails').querySelectorAll('.hidden input').forEach(input => {
                    input.removeAttribute('required');
                });
            });
        }

        // Fill proxy data function for embedded form
        function fillEmbeddedProxyData(method) {
            if (method === 'card') {
                document.getElementById('embeddedCardNumber').value = '4111 1111 1111 1111';
                document.getElementById('embeddedExpiry').value = '12/25';
                document.getElementById('embeddedCVV').value = '123';
                document.getElementById('embeddedCardName').value = 'John Doe';
            } else if (method === 'bank') {
                document.getElementById('embeddedAccountNumber').value = '1234567890';
                document.getElementById('embeddedRoutingNumber').value = '123456789';
                document.getElementById('embeddedBankName').value = 'Test Bank';
            }
        }
    </script>
