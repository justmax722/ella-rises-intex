<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Donations - Ella Rises CRM</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-background min-h-screen flex">
    <!-- Sidebar Navigation -->
    <%- include('partials/sidebar', { user: user, currentPage: 'donations' }) %>

    <!-- Main Content Area -->
    <main class="flex-1 p-6 md:p-8">
        <div class="max-w-7xl mx-auto">
            <!-- Page Header -->
            <div class="mb-8 flex items-start justify-between">
                <div>
                    <h1 class="text-3xl md:text-4xl font-serif text-foreground mb-2">Donations</h1>
                    <p class="text-base text-card-foreground/70">Track and manage donations</p>
                </div>
                <a href="/donate?loggedIn=true" class="px-4 py-2 md:px-6 md:py-2.5 bg-accent text-accent-foreground rounded-md font-medium hover:bg-accent/90 transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2">
                    Make a Donation
                </a>
            </div>

            <!-- Success Message -->
            <% if (typeof query !== 'undefined' && query.donationSuccess === 'true') { %>
            <div id="successMessage" class="mb-6 p-4 bg-secondary/20 border border-secondary rounded-md">
                <p class="text-sm text-card-foreground text-center">
                    Donation submitted successfully! Thank you for your support.
                </p>
            </div>
            <% } %>

            <!-- Summary Cards -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <!-- Total Donations -->
                <div class="bg-card rounded-lg p-6 shadow-sm">
                    <div class="flex items-center justify-between mb-2">
                        <h3 class="text-sm font-medium text-card-foreground/70">Total Donations</h3>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z" />
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.376 1.292V18a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 15.766 14 14.991 14 14c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 11.092V9.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.375-1.292V6z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <p class="text-3xl font-semibold text-card-foreground">$<%= stats.totalDonations %></p>
                    <p class="text-xs text-card-foreground/70 mt-1">All time</p>
                </div>

                <!-- This Month -->
                <div class="bg-card rounded-lg p-6 shadow-sm">
                    <div class="flex items-center justify-between mb-2">
                        <h3 class="text-sm font-medium text-card-foreground/70">This Month</h3>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                        </svg>
                    </div>
                    <p class="text-3xl font-semibold text-card-foreground">$<%= stats.thisMonthDonations %></p>
                    <p class="text-xs text-card-foreground/70 mt-1"><%= stats.thisMonthCount %> donations</p>
                </div>

                <!-- Average Donation -->
                <div class="bg-card rounded-lg p-6 shadow-sm">
                    <div class="flex items-center justify-between mb-2">
                        <h3 class="text-sm font-medium text-card-foreground/70">Average Donation</h3>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
                        </svg>
                    </div>
                    <p class="text-3xl font-semibold text-card-foreground">$<%= stats.averageDonation %></p>
                    <p class="text-xs text-card-foreground/70 mt-1">Per donor</p>
                </div>
            </div>

            <!-- Donation History -->
            <div class="bg-card rounded-lg shadow-sm overflow-hidden">
                <div class="p-6 border-b border-border flex items-center justify-between">
                    <h3 class="text-lg font-semibold text-card-foreground">Donation History</h3>
                    <% if (user.role === 'manager') { %>
                    <a href="/donations?view=<%= viewPersonal ? 'all' : 'personal' %>" class="px-4 py-2 bg-muted text-foreground rounded-md font-medium hover:bg-muted/80 transition-colors focus:outline-none focus:ring-2 focus:ring-ring">
                        <%= viewPersonal ? 'View all Donations' : 'View Personal Donation History' %>
                    </a>
                    <% } %>
                </div>

                <% if (user.role === 'manager') { %>
                <!-- Search and Filter Controls -->
                <div class="p-6 border-b border-border bg-muted/30">
                    <div class="flex flex-wrap items-end gap-4">
                        <!-- Search -->
                        <div class="flex-1 min-w-[200px]">
                            <label for="searchInput" class="block text-sm font-medium text-card-foreground mb-2">
                                Search
                            </label>
                            <input 
                                type="text" 
                                id="searchInput" 
                                placeholder="Search by name, email, or amount..."
                                class="w-full px-4 py-2 border border-input rounded-md bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent"
                            />
                        </div>
                        <!-- Date Filter From -->
                        <div class="w-40">
                            <label for="dateFrom" class="block text-sm font-medium text-card-foreground mb-2">
                                Date From
                            </label>
                            <input 
                                type="date" 
                                id="dateFrom" 
                                class="w-full px-3 py-2 border border-input rounded-md bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent text-sm"
                            />
                        </div>
                        <!-- Date Filter To -->
                        <div class="w-40">
                            <label for="dateTo" class="block text-sm font-medium text-card-foreground mb-2">
                                Date To
                            </label>
                            <input 
                                type="date" 
                                id="dateTo" 
                                class="w-full px-3 py-2 border border-input rounded-md bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent text-sm"
                            />
                        </div>
                        <!-- Clear Filters Button -->
                        <div>
                            <button 
                                type="button" 
                                id="clearFilters" 
                                class="px-4 py-2 bg-muted text-foreground rounded-md font-medium hover:bg-muted/80 transition-colors focus:outline-none focus:ring-2 focus:ring-ring whitespace-nowrap"
                            >
                                Clear Filters
                            </button>
                        </div>
                    </div>
                </div>
                <% } %>
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-muted/50 border-b border-border">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-card-foreground uppercase tracking-wider">Donor Name</th>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-card-foreground uppercase tracking-wider">Email</th>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-card-foreground uppercase tracking-wider">Amount</th>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-card-foreground uppercase tracking-wider">Date</th>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-card-foreground uppercase tracking-wider">Message</th>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-card-foreground uppercase tracking-wider">Export to PDF</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-border">
                            <% if (typeof donations !== 'undefined' && donations.length > 0) { %>
                                <% donations.forEach(function(donation) { %>
                                    <tr class="hover:bg-muted/30 transition-colors">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-medium text-card-foreground">
                                                <%= (donation.userfirstname || '') + ' ' + (donation.userlastname || '') || 'N/A' %>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm text-card-foreground/70"><%= donation.useremail || 'N/A' %></div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-medium text-card-foreground">$<%= parseFloat(donation.donationamount).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm text-card-foreground/70"><%= new Date(donation.donationdate).toLocaleDateString('en-US') %></div>
                                        </td>
                                        <td class="px-6 py-4">
                                            <% if (donation.donationmessage) { %>
                                                <% 
                                                    const message = donation.donationmessage;
                                                    const maxLength = 50;
                                                    const truncated = message.length > maxLength ? message.substring(0, maxLength) + '...' : message;
                                                %>
                                                <button 
                                                    onclick="showMessageModal('<%= message.replace(/'/g, "\\'").replace(/\n/g, '\\n') %>')"
                                                    class="text-sm text-primary hover:text-primary/80 hover:underline cursor-pointer text-left"
                                                >
                                                    <%= truncated %>
                                                </button>
                                            <% } else { %>
                                                <span class="text-sm text-card-foreground/50">â€”</span>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <a href="/donations/receipt?userId=<%= donation.userid %>&donationNo=<%= donation.donationno %>" 
                                               class="inline-flex items-center justify-center w-10 h-10 rounded-md text-primary hover:bg-primary/10 transition-colors focus:outline-none focus:ring-2 focus:ring-ring"
                                               target="_blank"
                                               title="Export to PDF">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-download">
                                                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                                                    <polyline points="7 10 12 15 17 10"></polyline>
                                                    <line x1="12" y1="15" x2="12" y2="3"></line>
                                                </svg>
                                            </a>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="px-6 py-4 text-center text-sm text-card-foreground/70">
                                        No donations found.
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>

    <!-- Message Modal -->
    <div id="messageModal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black/50" onclick="closeMessageModal(event)">
        <div class="bg-background rounded-lg shadow-lg max-w-2xl w-full mx-4 max-h-[80vh] overflow-hidden" onclick="event.stopPropagation()">
            <div class="p-6 border-b border-border flex items-center justify-between">
                <h3 class="text-lg font-semibold text-card-foreground">Donation Message</h3>
                <button onclick="closeMessageModal()" class="text-muted-foreground hover:text-foreground transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-x">
                        <path d="M18 6 6 18"></path>
                        <path d="M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            <div class="p-6 overflow-y-auto max-h-[60vh]">
                <p id="messageContent" class="text-sm text-card-foreground whitespace-pre-wrap"></p>
            </div>
        </div>
    </div>

    <script>
        // Message modal functions
        function showMessageModal(message) {
            const modal = document.getElementById('messageModal');
            const content = document.getElementById('messageContent');
            content.textContent = message.replace(/\\n/g, '\n');
            modal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeMessageModal(event) {
            if (event && event.target !== event.currentTarget) {
                return;
            }
            const modal = document.getElementById('messageModal');
            modal.classList.add('hidden');
            document.body.style.overflow = '';
        }

        // Close modal on Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeMessageModal();
            }
        });
        // Auto-hide success message after 5 seconds
        const successMessage = document.getElementById('successMessage');
        if (successMessage) {
            setTimeout(() => {
                successMessage.style.transition = 'opacity 0.5s';
                successMessage.style.opacity = '0';
                setTimeout(() => {
                    successMessage.remove();
                }, 500);
            }, 5000);
        }

        <% if (user.role === 'manager') { %>
        // Search and filter functionality for managers
        const searchInput = document.getElementById('searchInput');
        const dateFrom = document.getElementById('dateFrom');
        const dateTo = document.getElementById('dateTo');
        const clearFilters = document.getElementById('clearFilters');
        const tableBody = document.querySelector('tbody');
        const allRows = Array.from(tableBody.querySelectorAll('tr'));
        const tableRows = allRows.filter(row => !row.querySelector('td[colspan]'));
        const noDonationsRow = allRows.find(row => row.querySelector('td[colspan]'));

        function filterDonations() {
            const searchTerm = searchInput.value.toLowerCase().trim();
            const fromDate = dateFrom.value ? new Date(dateFrom.value) : null;
            const toDate = dateTo.value ? new Date(dateTo.value) : null;
            
            // Set toDate to end of day
            if (toDate) {
                toDate.setHours(23, 59, 59, 999);
            }

            let visibleCount = 0;

            tableRows.forEach(row => {
                const cells = row.querySelectorAll('td');
                const name = (cells[0]?.textContent || '').toLowerCase();
                const email = (cells[1]?.textContent || '').toLowerCase();
                const amount = (cells[2]?.textContent || '').toLowerCase();
                const dateText = cells[3]?.textContent || '';
                const dateValue = dateText ? new Date(dateText) : null;

                // Search filter
                let matchesSearch = true;
                if (searchTerm) {
                    matchesSearch = name.includes(searchTerm) || 
                                   email.includes(searchTerm) || 
                                   amount.includes(searchTerm);
                }

                // Date filter
                let matchesDate = true;
                if (fromDate && dateValue) {
                    matchesDate = matchesDate && dateValue >= fromDate;
                }
                if (toDate && dateValue) {
                    matchesDate = matchesDate && dateValue <= toDate;
                }

                // Show/hide row based on filters
                if (matchesSearch && matchesDate) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });

            // Show/hide "No donations found" message
            if (noDonationsRow) {
                if (visibleCount === 0 && tableRows.length > 0) {
                    noDonationsRow.style.display = '';
                } else {
                    noDonationsRow.style.display = 'none';
                }
            }
        }

        // Debounce search input
        let searchTimeout;
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(filterDonations, 300);
            });
        }

        // Date filter change handlers
        if (dateFrom) {
            dateFrom.addEventListener('change', filterDonations);
        }
        if (dateTo) {
            dateTo.addEventListener('change', filterDonations);
        }

        // Clear filters
        if (clearFilters) {
            clearFilters.addEventListener('click', function() {
                searchInput.value = '';
                dateFrom.value = '';
                dateTo.value = '';
                filterDonations();
            });
        }
        <% } %>
    </script>
</body>
</html>
