<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Donations - Ella Rises CRM</title>
    <link rel="icon" type="image/png" href="/images/favicon.png">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-background min-h-screen flex">
    <!-- Sidebar Navigation -->
    <%- include('partials/sidebar', { user: user, currentPage: 'donations' }) %>

    <!-- Main Content Area -->
    <main class="flex-1 p-6 md:p-8">
        <div class="max-w-7xl mx-auto">
            <!-- Page Header -->
            <div class="mb-8 flex items-start justify-between">
                <div>
                    <h1 class="text-3xl md:text-4xl font-serif text-foreground mb-2">Donations</h1>
                    <p class="text-base text-card-foreground/70">Track and manage donations</p>
                </div>
                <button type="button" id="toggleDonationFormBtn" class="px-4 py-2 md:px-6 md:py-2.5 bg-accent text-accent-foreground rounded-md font-medium hover:bg-accent/90 transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2">
                    Make a Donation
                </button>
            </div>

            <!-- Success Message -->
            <% if (typeof query !== 'undefined' && query.donationSuccess === 'true') { %>
            <div id="successMessage" class="mb-6 p-4 bg-secondary/20 border border-secondary rounded-md">
                <p class="text-sm text-card-foreground text-center">
                    Donation submitted successfully! Thank you for your support.
                </p>
            </div>
            <% } %>

            <!-- Embedded Donation Form -->
            <div id="donationFormContainer" class="mb-8 hidden">
                <div class="bg-card rounded-lg p-6 md:p-8 shadow-sm border border-border max-w-2xl mx-auto">
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-2xl font-serif font-bold text-card-foreground">Make a Donation</h2>
                        <button type="button" id="closeDonationFormBtn" class="text-muted-foreground hover:text-foreground transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </button>
                    </div>

                    <form id="embeddedDonationForm" action="/donate" method="POST" class="space-y-6">

                        <!-- Donation Amount -->
                        <div>
                            <label class="block text-sm font-medium text-card-foreground mb-3">
                                Donation Amount <span class="text-destructive">*</span>
                            </label>
                            <div class="grid grid-cols-2 sm:grid-cols-5 gap-3 mb-4">
                                <button type="button" data-amount="25" class="donation-amount-btn-embedded px-4 py-2.5 border border-input rounded-md bg-background text-foreground font-medium hover:bg-muted transition-colors focus:outline-none focus:ring-2 focus:ring-ring">
                                    $25
                                </button>
                                <button type="button" data-amount="50" class="donation-amount-btn-embedded px-4 py-2.5 border border-input rounded-md bg-background text-foreground font-medium hover:bg-muted transition-colors focus:outline-none focus:ring-2 focus:ring-ring">
                                    $50
                                </button>
                                <button type="button" data-amount="100" class="donation-amount-btn-embedded px-4 py-2.5 border border-input rounded-md bg-background text-foreground font-medium hover:bg-muted transition-colors focus:outline-none focus:ring-2 focus:ring-ring">
                                    $100
                                </button>
                                <button type="button" data-amount="250" class="donation-amount-btn-embedded px-4 py-2.5 border border-input rounded-md bg-background text-foreground font-medium hover:bg-muted transition-colors focus:outline-none focus:ring-2 focus:ring-ring">
                                    $250
                                </button>
                                <button type="button" data-amount="500" class="donation-amount-btn-embedded px-4 py-2.5 border border-input rounded-md bg-background text-foreground font-medium hover:bg-muted transition-colors focus:outline-none focus:ring-2 focus:ring-ring">
                                    $500
                                </button>
                            </div>
                            <div class="relative">
                                <span class="absolute left-4 top-1/2 -translate-y-1/2 text-foreground font-medium">$</span>
                                <input 
                                    type="number" 
                                    id="embeddedDonationAmount" 
                                    name="donationAmount" 
                                    required
                                    min="1"
                                    step="0.50"
                                    placeholder="Other amount"
                                    class="w-full pl-8 pr-4 py-2.5 border border-input rounded-md bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent transition-colors"
                                />
                            </div>
                        </div>

                        <!-- Payment Method -->
                        <div>
                            <label for="embeddedPaymentMethod" class="block text-sm font-medium text-card-foreground mb-2">
                                Payment Method <span class="text-destructive">*</span>
                            </label>
                            <div class="relative">
                                <select 
                                    id="embeddedPaymentMethod" 
                                    name="paymentMethod" 
                                    required
                                    class="w-full px-4 py-2.5 pr-10 border border-input rounded-md bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent transition-colors appearance-none cursor-pointer"
                                >
                                    <option value="">Select payment method</option>
                                    <option value="credit">Credit Card</option>
                                    <option value="debit">Debit Card</option>
                                    <option value="paypal">PayPal</option>
                                    <option value="bank">Bank Transfer</option>
                                </select>
                                <div class="absolute right-3 top-1/2 -translate-y-1/2 pointer-events-none">
                                    <svg class="w-5 h-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                    </svg>
                                </div>
                            </div>
                        </div>

                        <!-- Payment Details Section (shown based on payment method) -->
                        <div id="embeddedPaymentDetails" class="hidden space-y-4 p-4 border border-input rounded-md bg-muted/30 relative">
                            <!-- Credit/Debit Card Fields -->
                            <div id="embeddedCardFields" class="hidden space-y-4">
                                <div class="flex items-center justify-between mb-3">
                                    <h3 class="text-sm font-semibold text-card-foreground" id="embeddedCardTitle">Credit Card Information</h3>
                                    <button 
                                        type="button"
                                        onclick="fillEmbeddedProxyData('card')"
                                        class="text-xs px-2 py-1 bg-muted text-foreground rounded-md font-medium hover:bg-muted/80 transition-colors focus:outline-none focus:ring-2 focus:ring-ring"
                                    >
                                        Fill with Proxy Data
                                    </button>
                                </div>
                                <div>
                                    <label for="embeddedCardNumber" class="block text-sm font-medium text-card-foreground mb-2">
                                        Card Number <span class="text-destructive">*</span>
                                    </label>
                                    <input 
                                        type="text" 
                                        id="embeddedCardNumber" 
                                        name="creditCardNumber" 
                                        placeholder="1234 5678 9012 3456"
                                        maxlength="19"
                                        class="w-full px-4 py-2.5 border border-input rounded-md bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent transition-colors"
                                    />
                                </div>
                                <div class="grid grid-cols-2 gap-4">
                                    <div>
                                        <label for="embeddedExpiry" class="block text-sm font-medium text-card-foreground mb-2">
                                            Expiry Date <span class="text-destructive">*</span>
                                        </label>
                                        <input 
                                            type="text" 
                                            id="embeddedExpiry" 
                                            name="creditExpiry" 
                                            placeholder="MM/YY"
                                            maxlength="5"
                                            class="w-full px-4 py-2.5 border border-input rounded-md bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent transition-colors"
                                        />
                                    </div>
                                    <div>
                                        <label for="embeddedCVV" class="block text-sm font-medium text-card-foreground mb-2">
                                            CVV <span class="text-destructive">*</span>
                                        </label>
                                        <input 
                                            type="text" 
                                            id="embeddedCVV" 
                                            name="creditCVV" 
                                            placeholder="123"
                                            maxlength="4"
                                            class="w-full px-4 py-2.5 border border-input rounded-md bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent transition-colors"
                                        />
                                    </div>
                                </div>
                                <div>
                                    <label for="embeddedCardName" class="block text-sm font-medium text-card-foreground mb-2">
                                        Cardholder Name <span class="text-destructive">*</span>
                                    </label>
                                    <input 
                                        type="text" 
                                        id="embeddedCardName" 
                                        name="creditName" 
                                        placeholder="John Doe"
                                        class="w-full px-4 py-2.5 border border-input rounded-md bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent transition-colors"
                                    />
                                </div>
                            </div>

                            <!-- PayPal Field -->
                            <div id="embeddedPaypalField" class="hidden">
                                <p class="text-sm text-card-foreground/70">You will be redirected to PayPal to complete your payment.</p>
                            </div>

                            <!-- Bank Transfer Fields -->
                            <div id="embeddedBankFields" class="hidden space-y-4">
                                <div class="flex items-center justify-between mb-3">
                                    <h3 class="text-sm font-semibold text-card-foreground">Bank Transfer Information</h3>
                                    <button 
                                        type="button"
                                        onclick="fillEmbeddedProxyData('bank')"
                                        class="text-xs px-2 py-1 bg-muted text-foreground rounded-md font-medium hover:bg-muted/80 transition-colors focus:outline-none focus:ring-2 focus:ring-ring"
                                    >
                                        Fill with Proxy Data
                                    </button>
                                </div>
                                <div>
                                    <label for="embeddedAccountNumber" class="block text-sm font-medium text-card-foreground mb-2">
                                        Account Number <span class="text-destructive">*</span>
                                    </label>
                                    <input 
                                        type="text" 
                                        id="embeddedAccountNumber" 
                                        name="bankAccountNumber" 
                                        placeholder="1234567890"
                                        class="w-full px-4 py-2.5 border border-input rounded-md bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent transition-colors"
                                    />
                                </div>
                                <div>
                                    <label for="embeddedRoutingNumber" class="block text-sm font-medium text-card-foreground mb-2">
                                        Routing Number <span class="text-destructive">*</span>
                                    </label>
                                    <input 
                                        type="text" 
                                        id="embeddedRoutingNumber" 
                                        name="bankRoutingNumber" 
                                        placeholder="123456789"
                                        maxlength="9"
                                        class="w-full px-4 py-2.5 border border-input rounded-md bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent transition-colors"
                                    />
                                </div>
                                <div>
                                    <label for="embeddedBankName" class="block text-sm font-medium text-card-foreground mb-2">
                                        Bank Name <span class="text-destructive">*</span>
                                    </label>
                                    <input 
                                        type="text" 
                                        id="embeddedBankName" 
                                        name="bankName" 
                                        placeholder="Bank Name"
                                        class="w-full px-4 py-2.5 border border-input rounded-md bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent transition-colors"
                                    />
                                </div>
                            </div>
                        </div>

                        <!-- Message -->
                        <div>
                            <label for="embeddedMessage" class="block text-sm font-medium text-card-foreground mb-2">
                                Message <span class="text-muted-foreground text-xs">(Optional)</span>
                            </label>
                            <textarea 
                                id="embeddedMessage" 
                                name="message" 
                                rows="4"
                                placeholder="Leave a message of support..."
                                class="w-full px-4 py-2.5 border border-input rounded-md bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent transition-colors resize-y"
                            ></textarea>
                        </div>

                        <!-- Submit Button -->
                        <div class="flex gap-4">
                            <button 
                                type="submit"
                                class="flex-1 px-6 py-3 bg-accent text-accent-foreground rounded-md font-medium hover:bg-accent/90 transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2"
                            >
                                Complete Donation
                            </button>
                            <button 
                                type="button"
                                id="cancelDonationFormBtn"
                                class="px-6 py-3 bg-muted text-foreground rounded-md font-medium hover:bg-muted/80 transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2"
                            >
                                Cancel
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Summary Cards -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <!-- Total Donations -->
                <div class="bg-card rounded-lg p-6 shadow-sm">
                    <div class="flex items-center justify-between mb-2">
                        <h3 class="text-sm font-medium text-card-foreground/70">Total Donations</h3>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z" />
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.376 1.292V18a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 15.766 14 14.991 14 14c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 11.092V9.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.375-1.292V6z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <p class="text-3xl font-semibold text-card-foreground">$<%= stats.totalDonations %></p>
                    <p class="text-xs text-card-foreground/70 mt-1"><%= stats.totalDonationCount.toLocaleString('en-US') %> donation<%= stats.totalDonationCount !== 1 ? 's' : '' %></p>
                </div>

                <!-- This Month -->
                <div class="bg-card rounded-lg p-6 shadow-sm">
                    <div class="flex items-center justify-between mb-2">
                        <h3 class="text-sm font-medium text-card-foreground/70">This Month</h3>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                        </svg>
                    </div>
                    <p class="text-3xl font-semibold text-card-foreground">$<%= stats.thisMonthDonations %></p>
                    <p class="text-xs text-card-foreground/70 mt-1"><%= stats.thisMonthCount %> donations</p>
                </div>

                <!-- Average Donation -->
                <div class="bg-card rounded-lg p-6 shadow-sm">
                    <div class="flex items-center justify-between mb-2">
                        <h3 class="text-sm font-medium text-card-foreground/70">Average Donation</h3>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
                        </svg>
                    </div>
                    <p class="text-3xl font-semibold text-card-foreground">$<%= stats.averageDonation %></p>
                    <p class="text-xs text-card-foreground/70 mt-1"><% if (user.role === 'manager' && !viewPersonal) { %>Per donor<% } else { %>Per donation<% } %></p>
                </div>
            </div>

            <!-- Donation History -->
            <div class="bg-card rounded-lg shadow-sm overflow-hidden">
                <div class="p-6 border-b border-border flex items-center justify-between">
                    <h3 class="text-lg font-semibold text-card-foreground">Donation History</h3>
                    <% if (user.role === 'manager') { %>
                    <a href="/donations?view=<%= viewPersonal ? 'all' : 'personal' %>" class="px-4 py-2 bg-muted text-foreground rounded-md font-medium hover:bg-muted/80 transition-colors focus:outline-none focus:ring-2 focus:ring-ring">
                        <%= viewPersonal ? 'View all Donations' : 'View Personal Donation History' %>
                    </a>
                    <% } %>
                </div>

                <% if (user.role === 'manager') { %>
                <!-- Search and Filter Controls -->
                <div class="p-6 border-b border-border bg-muted/30">
                    <div class="flex flex-wrap items-end gap-4">
                        <!-- Search -->
                        <div class="flex-1 min-w-[200px]">
                            <label for="searchInput" class="block text-sm font-medium text-card-foreground mb-2">
                                Search
                            </label>
                            <input 
                                type="text" 
                                id="searchInput" 
                                placeholder="Search by name, email, or amount..."
                                class="w-full px-4 py-2 border border-input rounded-md bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent"
                            />
                        </div>
                        <!-- Date Filter From -->
                        <div class="w-40">
                            <label for="dateFrom" class="block text-sm font-medium text-card-foreground mb-2">
                                Date From
                            </label>
                            <input 
                                type="date" 
                                id="dateFrom" 
                                class="w-full px-3 py-2 border border-input rounded-md bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent text-sm"
                            />
                        </div>
                        <!-- Date Filter To -->
                        <div class="w-40">
                            <label for="dateTo" class="block text-sm font-medium text-card-foreground mb-2">
                                Date To
                            </label>
                            <input 
                                type="date" 
                                id="dateTo" 
                                class="w-full px-3 py-2 border border-input rounded-md bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent text-sm"
                            />
                        </div>
                        <!-- Clear Filters Button -->
                        <div>
                            <button 
                                type="button" 
                                id="clearFilters" 
                                class="px-4 py-2 bg-muted text-foreground rounded-md font-medium hover:bg-muted/80 transition-colors focus:outline-none focus:ring-2 focus:ring-ring whitespace-nowrap"
                            >
                                Clear Filters
                            </button>
                        </div>
                    </div>
                </div>
                <% } %>
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-muted/50 border-b border-border">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-card-foreground uppercase tracking-wider">Donor Name</th>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-card-foreground uppercase tracking-wider">Email</th>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-card-foreground uppercase tracking-wider">
                                    <div class="flex items-center gap-2">
                                        <span>Amount</span>
                                        <% if (user.role === 'manager') { %>
                                        <button onclick="sortTable('amount')" class="flex items-center text-card-foreground/60 hover:text-card-foreground transition-colors focus:outline-none" id="sortAmountBtn" title="Sort by Amount">
                                            <svg id="sortAmountIcon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <path d="m7 15 5 5 5-5"></path>
                                                <path d="m7 9 5-5 5 5"></path>
                                            </svg>
                                        </button>
                                        <% } %>
                                    </div>
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-card-foreground uppercase tracking-wider">
                                    <div class="flex items-center gap-2">
                                        <span>Date</span>
                                        <% if (user.role === 'manager') { %>
                                        <button onclick="sortTable('date')" class="flex items-center text-card-foreground/60 hover:text-card-foreground transition-colors focus:outline-none" id="sortDateBtn" title="Sort by Date">
                                            <svg id="sortDateIcon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <path d="m7 15 5 5 5-5"></path>
                                                <path d="m7 9 5-5 5 5"></path>
                                            </svg>
                                        </button>
                                        <% } %>
                                    </div>
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-card-foreground uppercase tracking-wider">Message</th>
                                <th class="px-6 py-3 text-left text-xs font-semibold text-card-foreground uppercase tracking-wider">Export to PDF</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-border">
                            <% if (typeof donations !== 'undefined' && donations.length > 0) { %>
                                <% donations.forEach(function(donation) { %>
                                    <tr class="hover:bg-muted/30 transition-colors">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-medium text-card-foreground">
                                                <%= (donation.userfirstname || '') + ' ' + (donation.userlastname || '') || 'N/A' %>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm text-card-foreground/70"><%= donation.useremail || 'N/A' %></div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-medium text-card-foreground">$<%= parseFloat(donation.donationamount).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm text-card-foreground/70"><%= new Date(donation.donationdate).toLocaleDateString('en-US') %></div>
                                        </td>
                                        <td class="px-6 py-4">
                                            <% if (donation.donationmessage) { %>
                                                <% 
                                                    const message = donation.donationmessage;
                                                    const maxLength = 50;
                                                    const truncated = message.length > maxLength ? message.substring(0, maxLength) + '...' : message;
                                                %>
                                                <button 
                                                    onclick="showMessageModal('<%= message.replace(/'/g, "\\'").replace(/\n/g, '\\n') %>')"
                                                    class="text-sm text-primary hover:text-primary/80 hover:underline cursor-pointer text-left"
                                                >
                                                    <%= truncated %>
                                                </button>
                                            <% } else { %>
                                                <span class="text-sm text-card-foreground/50">â€”</span>
                                            <% } %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <a href="/donations/receipt?userId=<%= donation.userid %>&donationNo=<%= donation.donationno %>" 
                                               class="inline-flex items-center justify-center w-10 h-10 rounded-md text-primary hover:bg-primary/10 transition-colors focus:outline-none focus:ring-2 focus:ring-ring"
                                               target="_blank"
                                               title="Export to PDF">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-download">
                                                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                                                    <polyline points="7 10 12 15 17 10"></polyline>
                                                    <line x1="12" y1="15" x2="12" y2="3"></line>
